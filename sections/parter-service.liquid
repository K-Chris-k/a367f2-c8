.banner-box .decribe{ position: relative;top: -120px;padding:70px 110px;border-radius: 25px;background: #FFF;line-height:38px;font-size:24px;}
.banner-box .decribe p{margin:0px} */
  @media (max-width: 768px) {
  .section-parter-servicemain{padding-top:50px}
  .section-parter-servicemain h2{ line-height:29px;font-size:24px;}
  .section-parter-servicemain .service-box {margin-top:1.5rem}
  .section-parter-servicemain .service-box li .content{ position:absolute;top:1.6rem;left:2rem}
  .section-parter-servicemain .service-box li .content h2{ line-height:24px;font-size:20px;}
  .section-parter-servicemain .service-box ul{
    display: block;
  }
  .section-parter-servicemain .service-box li{
    aspect-ratio: unset;
    min-height: 160px;
    padding-bottom: 1.6rem;
  }
}
</style>
{% liquid
    assign motion_delay = 50
%}
<div class="section page-width section--padding section-parter-servicemain">
   <h2 class="titie"> {{ section.settings.title }}</h2>
    <div class="service-box">
       <ul>
        {% for block in section.blocks %}
         <li>
           {% if block.settings.image != blank %}
             <div class="image-wapper">
              <picture>
                <source
                  media="(max-width: 749px)"
                  srcset="
                    {{ block.settings.image_mobile | img_url: '800x' }} 1x,
                    {{ block.settings.image_mobile | img_url: '1600x' }} 2x
                  "
                >
                <source
                  media="(min-width: 750px)"
                  srcset="
                    {{ block.settings.image | img_url: '1200x' }} 1x,
                    {{ block.settings.image | img_url: '2400x' }} 2x
                  "
                >
                <img
                  src="{{ block.settings.image | img_url: '1200x' }}"
                  alt="{{ block.settings.image | escape }}"
                  loading="lazy"
                  width="{{ block.settings.image.width }}"
                  height="{{ block.settings.image.height }}"
                >
              </picture>
             </div>
             <div class="content">
                <h2>{{ block.settings.title }}</h2>
                <!-- <h4>{{ block.settings.subtitle }}</h4> -->
             </div>

            {% else %}
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
         </li>
         {% endfor %}
       </ul>
       
    </div>
</div>
