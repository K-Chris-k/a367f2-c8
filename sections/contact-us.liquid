<style>
   #shopify-section-{{ section.id }} {padding-top:{{ section.settings.padding_top }}px;padding-bottom:{{ section.settings.padding_bottom }}px;}
  .section-contact-us .box{display:flex;padding:39px 57px;gap:79px;justify-content: space-between;border-radius: 20px;background: #F5F5F5;}
  .section-contact-us .box .left-image{ width:572px;}
  .section-contact-us .box .right,.section-contact-us .box .left{flex:1}
  .section-contact-us .box .right{ display: inline-flex;justify-content: center;flex-flow: column;text-align:center}
  .section-contact-us .box .right h2{line-height:44px;font-size:36px;white-space: nowrap;}
  .section-contact-us .box .right a{margin-top:12px;line-height: 19px;font-size: 16px;color: #3250C3;text-decoration: underline;}
  .section-contact-us .box .right img{width: 64px;height:64px;}
  .section-contact-us .methods ul{margin-top:60px;display: flex;justify-content: center;gap:53px;line-height:17px;font-size: 14px;font-weight: 500;}
  .section-contact-us .methods img{display: inline-flex;justify-content: center}
  .section-contact-us .methods .tit{margin-top:13px;color: #666;}
  .section-contact-us .methods .details{margin-top:6px;color: #000;}
  .section-contact-us .methods .details svg{    display: inline-flex;vertical-align: middle;}
  .section-contact-us .methods .details a{color: #000;text-decoration: none;}
  .section-contact-us .methods .details a:hover,.section-contact-us .methods .details:hover{color: #3250C3;cursor: pointer;}
  .mobile-show{ display:none}
    @media (max-width: 1156px) {
      .section-contact-us .methods .details{word-break: break-all; white-space: nowrap}
      .section-contact-us .methods ul{margin-top:50px}
      .section-contact-us .box{gap: 40px;padding: 39px 47px;}
      .section-contact-us .box .right h2{ line-height: 40px;font-size: 32px;}
    }
    @media (max-width: 1024px) {
      .section-contact-us .box{padding: 29px 27px;gap:20px}
      .section-contact-us .box .right{padding-right:0px}
      .section-contact-us .methods .details{margin-top:0px; word-break: break-all; white-space: nowrap}
      .section-contact-us .box .right h2{line-height: 30px;font-size: 30px;}
      .section-contact-us .methods ul{margin-top:40px}
      .section-contact-us .methods .tit{margin-top:5px;}
      .section-contact-us .box .right img{width:40px;height:40px}
    }
    @media (max-width: 767px) {
      .mobile-show{ display:block}
      #shopify-section-{{ section.id }} { padding-top:{% if section.settings.custom_mobile_padding_top != blank %}{{section.settings.custom_mobile_padding_top | divided_by: 2 }}px{% else %}{{ section.settings.padding_top | divided_by: 2  }}px{% endif %};padding-bottom:{{ section.settings.padding_bottom | divided_by: 2  }}px;}
      .section-contact-us .box{padding:30px 20px}
      .section-contact-us .box .right, .section-contact-us .box .left{flex:auto}
      .section-contact-us .box .left{display:flex;justify-content: center;}
      .section-contact-us .box .right{margin-top:3rem}
      .section-contact-us .box .right img{width: 32px;height:32px}
      .section-contact-us .box,.section-contact-us .methods ul{margin-top:2rem;flex-flow: wrap;justify-content: center;}
      .section-contact-us .methods ul{gap:2rem;line-height:15px;font-size:12px}
      .section-contact-us .box,.section-contact-us .methods ul li{width: 100%;}
      .section-contact-us .methods .details{margin-top:0px}
      .section-contact-us .box .right h2{line-height:24px;font-size: 20px;}
      .section-contact-us .box .right a{margin-top:3px;line-height:17px;font-size: 14px;}
      .section-contact-us .methods .details svg{width: 1.4rem;height: 1.4rem;}
    }

    .a_underline {
      text-decoration: underline;
      text-underline-offset: 4px;
    }
</style>
<div class="section section--padding page-width section-contact-us">
  <div class="box">
    <div class="left">
      {% if section.settings.image_pc != blank %}
        <picture>
          <!-- 移动端图片 -->
          <source
            media="(max-width: 749px)"
            srcset="
              {{ section.settings.image_mobile | img_url: '800x' }} 1x,
              {{ section.settings.image_mobile | img_url: '1600x' }} 2x
            "
          >

          <!-- 桌面端图片 -->
          <source
            media="(min-width: 750px)"
            srcset="
              {{ section.settings.image_pc | img_url: '1200x' }} 1x,
              {{ section.settings.image_pc | img_url: '2400x' }} 2x
            "
          >

          <!-- 默认图片 -->
          <img
            src="{{ section.settings.image_pc | img_url: '1200x' }}"
            alt="{{ section.settings.title | escape }}"
            class="left-image"
            loading="lazy"
            width="{{ section.settings.image_pc.width }}"
            height="{{ section.settings.image_pc.height }}"
          >
        </picture>
      {% else %}
        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
      {% endif %}
    </div>
    <div class="right">
      <h2>{{ section.settings.title }}</h2>
      <a href="{{ section.settings.link_url }}" class="a_underline" alt="{{ section.settings.link_title }}">
        {{- section.settings.link_title -}}
      </a>
      <div class="methods">
        <ul>
          {% for block in section.blocks %}
            <li>
              <picture>
                <!-- 移动端图片 -->
                <source
                  media="(max-width: 749px)"
                  srcset="
                    {{ block.settings.image | img_url: '800x' }} 1x,
                    {{ block.settings.image | img_url: '1600x' }} 2x
                  "
                >

                <!-- 桌面端图片 -->
                <source
                  media="(min-width: 750px)"
                  srcset="
                    {{ block.settings.image | img_url: '1200x' }} 1x,
                    {{ block.settings.image | img_url: '2400x' }} 2x
                  "
                >

                <!-- 默认图片 -->
                <img
                  src="{{ block.settings.image | img_url: '1200x' }}"
                  alt="{{ block.settings.title | escape }}"
                  class="grid-image"
                  loading="lazy"
                  width="{{ block.settings.image.width }}"
                  height="{{ block.settings.image.height }}"
                >
              </picture>
              <div class="tit">{{ block.settings.title }}</div>
              <div class="details pc-show">{{ block.settings.content }}{%- render 'icon-slider-next', size: 'small' -%}</div>
              <div class="details mobile-show"><a href="tel:+49%20(0)174%203150766">{{ block.settings.content }}{%- render 'icon-slider-next', size: 'small' -%}</a>  </div>
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
</div>
<script>
  $(document).ready(function () {
    $('.review-carousel').slick({
      slidesToShow: 4, // 显示两屏半
      slidesToScroll: 1, // 每次滚动一屏
      infinite: true, // 无限循环
      arrows: false, // 隐藏默认箭头
      dots: true, // 显示分页指示器
      fade: false, // 是否使用淡入淡出效果
      speed: 800, // 切换速度
      cssEase: 'cubic-bezier(0.645, 0.045, 0.355, 1)', // 动画曲线
      infinite: true,
      autoplay: false,
      vertical: true, // 垂直滚动
      verticalSwiping: true, // 允许垂直滑动
      responsive: [
        {
          breakpoint: 768,
          settings: {
            vertical: false, // 在小屏幕上改为水平滚动
            verticalSwiping: false,
          },
        },
      ],
    });
  });
</script>
{% schema %}
{
  "name": "contact-us",
  "tag": "section",
  "class": "section section-contact-us",
  "max_blocks": 4,
  "disabled_on": {
    "groups": ["footer", "header", "custom.overlay"]
  },
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "标题",
      "default": "Partnerschaft mit Indevolt"
    },
     {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 160,
      "step": 4,
      "unit": "px",
      "label": "Top Padding",
      "default": 120
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 160,
      "step": 4,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 120
    },
    {
      "type": "range",
      "id": "custom_mobile_padding_top",
      "min": 0,
      "max": 160,
      "step": 4,
      "unit": "px",
      "label": "Mobile Top Padding",
      "default": 80
    },
    {
      "type": "image_picker",
      "id": "image_pc",
      "label": "PC大图"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "移动端大图"
    },
    {
      "type": "text",
      "id": "link_title",
      "label": "跳转标题",
      "default": "Mehr erfahren >"
    },
    {
      "type": "text",
      "id": "link_url",
      "label": "跳转链接",
      "default": "https://de.indevolt.com/pages/partner"
    }
  ],
  "blocks": [
    {
      "type": "card",
      "name": "review item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "图片"
        },
        {
          "type": "text",
          "id": "title",
          "label": "标题"
        },
        {
          "type": "textarea",
          "id": "content",
          "label": "描述"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "联系我们",
      "category": "自定义组件"
    }
  ]
}
{% endschema %}
