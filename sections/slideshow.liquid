                        {{- block.settings.description -}}
                      </motion-element>
                       <motion-element
                        class="block slideshow__date {{ date_size }} rich-text__text rte"
                        data-text
                        hold 
                      >
                        <div class="date"  style="color:{{ block.settings.date_color }};margin-top:{{ block.settings.date_mt }}px;">
                        {{- block.settings.date -}} {% if block.settings.date_span != blank %}<span style="color:{{ block.settings.date_span_color }};font-size:{{  block.settings.date_span_size }}">{{- block.settings.date_span -}}</span>{% endif %}
                        </div>
                      </motion-element>
                     {% if block.settings.is_show_email %}
                        <div id="mc_embed_shell">
