                      <h2 class="slideshow__title {{ block.settings.heading_size }} rich-text__heading" style="color:{{ block.settings.title_color  }}">
                          {{- block.settings.title -}}{% if block.settings.title_span != blank %}<span class="{% if block.settings.title_span_bg != blank  %}tip-color{% endif %}"style="font-size:{{ block.settings.title_span_size}};color:{{ block.settings.title_span_color }};background:{{ block.settings.title_span_bg }}">{{- block.settings.title_span -}}</span>{% endif %}
                      </h2>
                      </motion-element>
                      <motion-element
