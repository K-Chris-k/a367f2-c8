    :root{
        --size: 80px;          
        --duration: 1.8s;     
        --stagger: 0.6s;       
        --scale-end: 3.6;    
        --stroke-width: 0.6; 
        --color: #000;   
      }
    .ring {
      fill: none;
      stroke: #000;
      stroke-width: var(--stroke-width);
      transform-box: fill-box;       
      transform-origin: 50% 50%;
      animation: ripple var(--duration) linear infinite;
    }
    .ring.r1 { animation-delay: calc(var(--stagger) * 0); }
    .ring.r2 { animation-delay: calc(var(--stagger) * 1); }
    .ring.r3 { animation-delay: calc(var(--stagger) * 2); }
    .core {
      fill: var(--color);
      stroke: none;
    }
    .text-lg {
      font-size:24px;
      line-height: 29px;
    }
    @keyframes ripple {
      0% {
        transform: scale(0.35);
        stroke-opacity: 0.95;
      }
      60% {
        transform: scale(calc(var(--scale-end) * 0.7));
        stroke-opacity: 0.35;
      }
      100% {
        transform: scale(var(--scale-end));
        stroke-opacity: 0;
      }
    }

