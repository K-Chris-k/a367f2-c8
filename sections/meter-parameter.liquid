  "name": "meter-list",
  "tag": "section",
  "class": "section section-meter-list",
  "max_blocks": 10,
  "disabled_on": {
    "groups": ["footer", "header", "custom.overlay"]
  },
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "标题",
      "default": "P1 Meter lezer Kenmerken"
    }
  ],
  "blocks": [
    {
      "type": "card",
      "name": "brand item",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "参数标题"
        },
        {
          "type": "richtext",
          "id": "content1",
          "label": "描述1"
        },
        {
          "type": "richtext",
          "id": "content2",
          "label": "描述2"
        },
        {
          "type": "richtext",
          "id": "content3",
          "label": "描述3"
        },
        {
          "type": "richtext",
          "id": "content4",
          "label": "描述4"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "meter特色列表",
      "blocks": [
        {
          "type": "card"
        },
        {
          "type": "card"
        },
        {
          "type": "card"
        },
        {
          "type": "card"
        }
      ]
    }
  ]
}
{% endschema %}
