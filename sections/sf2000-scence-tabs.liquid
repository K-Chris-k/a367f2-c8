{%- liquid
  assign tab_inline_style = '--tab-image-width: ' | append: 100 | append: '%;'
  assign nav_style = 'design-1'
  assign motion_delay = 50
-%}
{{ 'component-tabs.css' | asset_url | stylesheet_tag }}
{{ 'section-collage-tabs.css' | asset_url | stylesheet_tag }}
<style>
  .section-{{ section.id }} .h2-title {line-height:56px;font-size: 46px;text-align:center}
  .section-{{ section.id }} .tabs__header {padding-top:46px}
  .section-{{ section.id }} .tabs__nav{gap:40px;display:flex;border-bottom: 1px solid #ddd;}
  .section-{{ section.id }}  .custom-bottom-color{ border-color:rgba(255, 255, 255, 0.3)}
  .tabs__nav-design-1 .tabs__tab:before{width:100%;background:#1d1d1d}
  .section-{{ section.id }} .tabs__tab{flex:1;padding-bottom: 0px;}
  .section-{{ section.id }} .tabs__tab span{ padding: 0px 0px 10px;font-size: 18px;line-height: 22px;white-space: nowrap;}
  .tabs__nav-design-1 .tabs__tab:before{height:2px;background:transparent}
  .tabs__nav-design-1 .tabs__tab[aria-selected="true"] span{color: #3250C3;}
  .tabs__nav-design-1 .tabs__tab[aria-selected="true"]:before{color: #3250C3;border-bottom: 2px solid #3250C3;}
  .section-{{ section.id }} .flex-wrap{flex-flow: column-reverse;background:none}
  .section-{{ section.id }} .collage-tab__content{max-width: 100%;padding:1.8rem 3.2rem 2.4rem 3.2rem;color:#666}
  .section-{{ section.id }} .tabs__header{margin-bottom:0px}
  .section-{{ section.id }} .tabs__tab-name{ color:{{ section.settings.tab_title_color }}}
  
  @media (max-width: 767.98px) {
    .section-{{ section.id }}{padding-left:0px;padding-right:0px}
    .section-{{ section.id }} .tabs-wraper,.section-{{ section.id }} .h2-title{ margin:0px 1.5rem}
    .section-{{ section.id }} .tabs__nav{display:flex;gap:20px;width:100%; padding-inline: 0rem;}
    .section-{{ section.id }} .tabs__tab span,.collage-tab__content-inner p{line-height: 17px;white-space: pre-wrap;font-size: 14px;text-align:left}
    .tabs__nav-design-1 .tabs__tab{justify-content: flex-start;text-align:left  }
    .section-{{ section.id }} .tabs__tab-name{ padding-right: 0px;line-height: 17px; }
    .section-{{ section.id }} .tabs__header{padding-top:2rem}
    .section-{{ section.id }} .tabs__nav-wrap{max-width:100%}
    .section-{{ section.id }} .h2-title {line-height:34px;font-size: 28px;}
    .section-{{ section.id }} .collage-tab__image{height:226px;background: transparent;}
    .section-{{ section.id }} .collage-tab__image img{ height: 100%;object-fit: fill;}
    .section-{{ section.id }} .collage-tab__content{padding:1.8rem 3.2rem 2.4rem 0rem;color:#666}
    
  }
</style>
{% render 'divider',
  show_divider: section.settings.show_section_divider,
  divider_width: section.settings.divider_width
%}
<div
  class="section section-{{ section.id }} section--padding section--collage-tabs page-width color-{{ section.settings.color_scheme }}"
  style="--section-padding-top: {{ section.settings.padding_top }}px;--section-padding-bottom: {{ section.settings.padding_bottom }}px;
  background-color: {{ section.settings.bg_color }};"
  data-id="{{ section.id }}"
>   {%- if section.settings.title !=blank -%}
    <h2 class="h2-title">
      <motion-element class="block" data-motion="fade-up" data-motion-delay="{{ motion_delay }}"> <span>{{ section.settings.title }}</span></motion-element>
    </h2>
    {% endif %}
  {%- if section.blocks.size > 0 -%}
    <div class="tabs-wraper">
    <tabs-component class="tabs tabs__nav-{{ nav_style }}">
      <div
        class="tabs__header flex justify-{{ section.settings.desktop_navigation_alignment }}"
        role="tablist"
      >
        <div class="tabs__nav-wrap">
          <div class="tabs__nav{% if section.settings.bg_color != '#ffffff' %} custom-bottom-color {% endif %}">
            {%- for block in section.blocks -%}
              {%- liquid
                if block.settings.navigation_title != blank
                  assign tab_name = block.settings.navigation_title
                else
                  assign tab_name = 'Tab ' | append: forloop.index
                endif
              -%}
              <button class="tabs__tab focus-inset" role="tab" id="{{- block.id -}}" {{ block.shopify_attributes }}>
                <span class="tabs__tab-name {{ section.settings.heading_size }}">{{- tab_name -}}</span>
              </button>
            {%- endfor -%}
          </div>
        </div>
      </div>
      <div class="tabs__panel">
        {%- for block in section.blocks -%}
          {%- liquid
            assign aspect_ratio = section.settings.image_aspect_ratio | default: '1/1'
            if aspect_ratio == 'adapt'
              if block.settings.image != blank
                assign aspect_ratio = block.settings.image.aspect_ratio
              else
                assign aspect_ratio = '1/1'
              endif
            endif

            assign loading = 'lazy'
            assign fetchpriority = 'low'
            if section.index < 2 and forloop.index == 1
              assign loading = 'eager'
              assign fetchpriority = 'high'
            endif
          -%}
          <div
            class="tabs__content"
            id="tab-{{ block.id }}"
            data-index="{{ forloop.index0 }}"
            role="tabpanel"
            {% unless forloop.first %}
              hidden
            {% endunless %}
          >
            <div
              class="flex flex-wrap color-{{ block.settings.content_color_scheme }}"
              style="{{ tab_inline_style }}"
            >
              <div
                class="collage-tab__image media-wrapper{% if block.settings.image == blank %} bg-none{% endif %}{% if section.settings.desktop_image_position == 'right' %} md:order-last{% endif %}"
                style="--aspect-ratio: {{ aspect_ratio }};"
              >
                  {% if block.settings.image != blank %}
                  <picture>
                    <!-- 移动端图片 -->
                    <source
                      media="(max-width: 749px)"
                      srcset="
                        {{ block.settings.mobile_image | img_url: '800x' }} 1x,
                        {{ block.settings.mobile_image | img_url: '1600x' }} 2x
                      "
                    >

                    <!-- 桌面端图片 -->
                    <source
                      media="(min-width: 750px)"
                      srcset="
                        {{ block.settings.image | img_url: '1200x' }} 1x,
                        {{ block.settings.image | img_url: '2400x' }} 2x
                      "
                    >

                    <!-- 默认图片 -->
                    <img
                      src="{{ block.settings.image | img_url: '1200x' }}"
                      alt="{{ block.settings.title | escape }}"
                      class="grid-image"
                      loading="lazy"
                      width="{{ block.settings.image.width }}"
                      height="{{ block.settings.image.height }}"
                    >
                  </picture>
                {% else %}
                  {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                {% endif %}
              </div>
              <div class="collage-tab__content flex-1 flex items-center">
                <div class="collage-tab__content-inner rich-text flex flex-col w-full text-{{ block.settings.text_alignment }}">
                  {%- if block.settings.subheading != blank -%}
                    <motion-element
                      data-motion="fade-up"
                      data-motion-delay="{{ motion_delay }}"
                      class="block rich-text__subheading text-subheading"
                    >
                      {{ block.settings.subheading }}
                    </motion-element>
                    {%- assign motion_delay = motion_delay | plus: 50 -%}
                  {%- endif -%}
                  {% comment %} {%- if block.settings.heading != blank -%}
                    <h2 class="rich-text__heading inline-richtext {{ block.settings.heading_size }}">
                      <motion-element class="block" data-motion="fade-up" data-motion-delay="{{ motion_delay }}">
                        {% render 'highlight-text',
                          text: block.settings.heading,
                          style: block.settings.heading_highlight_style
                        %}
                      </motion-element>
                    </h2>
                    {%- assign motion_delay = motion_delay | plus: 50 -%}
                  {%- endif -%} {% endcomment %}
                  {%- if block.settings.description != blank -%}
                    <motion-element
                      data-motion="fade-up"
                      data-motion-delay="{{ motion_delay }}"
                      class="block rich-text__text rte {{ block.settings.text_size }}"
                      style="color:{{ section.settings.tab_content_color }}"
                    >
                      {{ block.settings.description }}
                    </motion-element>
                    {%- assign motion_delay = motion_delay | plus: 50 -%}
                  {%- endif -%}
                  {% comment %} {%- if block.settings.button_label != blank -%}
                    <motion-element
                      data-motion="fade-up"
                      data-motion-delay="{{ motion_delay }}"
                      class="block rich-text__button"
                    >
                      <a
                        class="btn {{ block.settings.button_style }}"
                        {% if block.settings.button_link != blank %}
                          href="{{ block.settings.button_link }}"
                        {% else %}
                          aria-disabled="true"
                        {% endif %}
                      >
                        {{- block.settings.button_label -}}
                      </a>
                    </motion-element>
                    {%- assign motion_delay = motion_delay | plus: 50 -%}
                  {% endif %} {% endcomment %}
                </div>
              </div>
            </div>
          </div>
        {%- endfor -%}
      </div>
    </tabs-component>
    </div>
  {%- endif -%}
</div>
<script>
  document.addEventListener("DOMContentLoaded", function() {
    var tabNavWrap = document.querySelector('.section-{{ section.id }} .tabs__nav-wrap');
    var tabs = document.querySelectorAll('.section-{{ section.id }} .tabs__tab');

    tabs.forEach(function(tab) {
      tab.addEventListener('click', function(e) {
        tab.scrollIntoView({ behavior: 'smooth', inline: 'center', block: 'nearest' });
      });
    });

    // Scroll to the selected tab when aria-selected is changed
    const observer = new MutationObserver(() => {
      tabs.forEach(tab => {
        if (tab.getAttribute('aria-selected') === 'true') {
          tab.scrollIntoView({ behavior: 'smooth', inline: 'center', block: 'nearest' });
        }
      });
    });
    tabs.forEach(tab => observer.observe(tab, { attributes: true }));
  });
</script>
