  .video-mobile { display: none; }
  .video-modal { pointer-events: none; }
  .video-modal.active { pointer-events: auto;}
  .close-button{padding:0px}
  .video-hero__content-wrapper{ will-change: transform, opacity;}
  .video-hero__content-wrapper.content-hidden {
