<script>
document.addEventListener('DOMContentLoaded', () => {
  // 内容动画初始化
  const initContentAnimation = () => {
    const desktopVideo = document.querySelector('.video-desktop video');
    const mobileVideo = document.querySelector('.video-mobile video');
    const content = document.querySelector('.video-hero__content-wrapper');
    
    if (!content) {
      return;
    }
    
    // 初始隐藏内容
    content.classList.add('content-hidden');
    
    // 防止视频重新播放的标记
    let videoPlayed = false;
    let contentShown = false;
    
    const setupVideoEndListener = (videoElement, contentElement, deviceType) => {
      if (videoElement) {
        // 防止视频自动重新播放
        videoElement.setAttribute('playsinline', '');
        videoElement.setAttribute('webkit-playsinline', '');
        
        // 禁用视频的自动暂停和重新播放
        const handleVisibilityChange = () => {
          if (document.hidden) {
            // 页面隐藏时暂停视频
            if (!videoElement.paused && videoPlayed) {
              videoElement.pause();
            }
          } else {
            // 页面显示时不要自动播放，除非视频之前就在播放
            if (videoPlayed && videoElement.paused) {
              // 如果视频已经播放过但被暂停了，不自动重新播放
              // 保持暂停状态
            }
          }
        };

        document.addEventListener('visibilitychange', handleVisibilityChange);

        // 监听视频开始播放
        videoElement.addEventListener('play', () => {
          videoPlayed = true;
          console.log('视频开始播放');
        });

        // 监听视频暂停
        videoElement.addEventListener('pause', () => {
          console.log('视频暂停');
        });

        // 获取视频时长
        const getVideoDuration = () => {
          return new Promise((resolve) => {
            if (videoElement.duration && videoElement.duration > 0) {
              resolve(videoElement.duration);
            } else {
              videoElement.addEventListener('loadedmetadata', () => {
                resolve(videoElement.duration);
              });
              // 如果无法获取时长，默认5秒
              setTimeout(() => resolve(5), 1000);
            }
          });
        };

        // 在视频结束前1秒显示内容
        const showContentBeforeEnd = async () => {
          if (contentShown) return;
          
          try {
            const duration = await getVideoDuration();
            const showTime = Math.max(duration - 1, 0); // 结束前1秒，但不小于0
            
            console.log(`视频时长: ${duration}秒, 将在 ${showTime} 秒后显示内容`);
            
            setTimeout(() => {
              if (!contentShown) {
                showContentAnimation(contentElement);
                contentShown = true;
              }
            }, showTime * 1000);
          } catch (error) {
            console.log('获取视频时长失败，3秒后显示内容');
            setTimeout(() => {
              if (!contentShown) {
                showContentAnimation(contentElement);
                contentShown = true;
              }
            }, 3000);
          }
        };

        // 监听视频开始播放
        videoElement.addEventListener('playing', () => {
          console.log('视频开始播放，计算显示内容时间');
          showContentBeforeEnd();
        });

        // 如果视频已经在播放
        if (!videoElement.paused && videoElement.currentTime > 0) {
          showContentBeforeEnd();
        }
        
        // 备用：如果视频结束事件触发，确保内容显示
        videoElement.addEventListener('ended', () => {
          console.log('视频结束，确保内容显示');
          if (!contentShown) {
            showContentAnimation(contentElement);
            contentShown = true;
          }
        });
        
        // 处理视频错误
        videoElement.addEventListener('error', () => {
          console.log('视频加载错误，立即显示内容');
          if (!contentShown) {
            showContentAnimation(contentElement);
            contentShown = true;
          }
        });

        // 如果视频已经结束
        if (videoElement.ended) {
          showContentAnimation(contentElement);
          contentShown = true;
        }

        // 使用 Intersection Observer 防止视频重新播放
        const observer = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              // 视频进入视口
              if (videoPlayed && videoElement.paused) {
                // 如果视频已经播放过但暂停了，不要自动重新播放
                console.log('视频进入视口，保持暂停状态');
              }
            } else {
              // 视频离开视口
              if (!videoElement.paused && videoPlayed) {
                // 暂停视频但不要重置
                videoElement.pause();
                console.log('视频离开视口，暂停播放');
              }
            }
          });
        }, {
          threshold: 0.5 // 当50%的视频在视口中时触发
        });

        observer.observe(videoElement);
      }
    };
    
    // 根据当前设备选择视频
    const currentVideo = window.innerWidth >= 768 ? desktopVideo : mobileVideo;
    const deviceType = window.innerWidth >= 768 ? '桌面' : '移动端';
    
    if (currentVideo) {
      setupVideoEndListener(currentVideo, content, deviceType);
    } else {
      // 如果找不到视频，3秒后显示内容
      console.log('未找到视频，3秒后显示内容');
      setTimeout(() => {
        showContentAnimation(content);
      }, 3000);
    }
    
    // 安全保护：如果8秒后内容仍未显示，强制显示
    setTimeout(() => {
      if (content && content.classList.contains('content-hidden')) {
        console.log('安全保护：强制显示内容');
        showContentAnimation(content);
      }
    }, 8000);
  };
  
  // 显示内容动画函数
  const showContentAnimation = (contentElement) => {
    if (!contentElement || contentElement.classList.contains('content-visible')) return;
    contentElement.classList.remove('content-hidden');
    void contentElement.offsetWidth;
    contentElement.classList.add('content-visible');
    console.log('内容动画已显示');
  };

  // 弹窗功能
  const initVideoModal = () => {
    const modal = document.getElementById('custom-video-modal');
    const videoPlayer = modal.querySelector('.video-player');
    const closeBtn = modal.querySelector('.close-button');
    let isModalOpen = false;
    
    const openModal = (videoUrl) => {
      const videoId = extractVideoId(videoUrl);
      if (videoId) {
        const embedUrl = `https://www.youtube.com/embed/${videoId}?autoplay=1&rel=0&playsinline=1&playlist=${videoId}`;
        const newIframe = document.createElement('iframe');
        newIframe.className = 'youtube-iframe';
        newIframe.src = embedUrl;
        newIframe.allow = 'accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture';
        newIframe.allowFullscreen = true;
        newIframe.style.width = '100%';
        newIframe.style.height = '100%';
        newIframe.style.border = 'none';
        
        videoPlayer.innerHTML = '';
        videoPlayer.appendChild(newIframe);
        modal.classList.add('active');
        document.body.style.overflow = 'hidden';
        isModalOpen = true;
        document.addEventListener('keydown', handleKeyPress);
      }
    };

    const closeModal = () => {
      if (!isModalOpen) return;
      modal.classList.remove('active');
      document.body.style.overflow = '';
      isModalOpen = false;
      document.removeEventListener('keydown', handleKeyPress);
    };

    const extractVideoId = (url) => {
      if (!url) {
        console.error('No video URL provided');
        return '';
      }
      
      let videoId = '';
      try {
        if (url.includes('v=')) {
          videoId = url.split('v=')[1].split('&')[0];
        } else if (url.includes('youtu.be/')) {
          videoId = url.split('youtu.be/')[1].split('?')[0];
        } else if (url.includes('/embed/')) {
          videoId = url.split('/embed/')[1].split('?')[0];
        }
        
        return videoId;
      } catch (error) {
        console.error('Error extracting video ID:', error);
        return '';
      }
    };

    const handleKeyPress = (event) => {
      if (event.key === 'Escape' && isModalOpen) {
        closeModal();
      }
    };
    
    document.addEventListener('click', (event) => {
      const trigger = event.target.closest('.video-modal-trigger');
      if (trigger) {
        event.preventDefault();
        const url = trigger.getAttribute('data-video-url');
        openModal(url);
      }
    });
    
    closeBtn.addEventListener('click', closeModal);
    modal.addEventListener('click', (e) => {
      if (e.target === modal) {
        closeModal();
      }
    });
  };

  // 响应式处理
  const initResponsiveHandler = () => {
    let currentDevice = window.innerWidth >= 768 ? 'desktop' : 'mobile';
    
    window.addEventListener('resize', () => {
      const newDevice = window.innerWidth >= 768 ? 'desktop' : 'mobile';
      if (newDevice !== currentDevice) {
        currentDevice = newDevice;
      }
    });
  };

  // 初始化所有功能
  const initAll = () => {
    initContentAnimation();
    initVideoModal();
    initResponsiveHandler();
  };
  
  initAll();
});
</script>
