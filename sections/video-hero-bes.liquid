{% render 'divider',
  show_divider: section.settings.show_section_divider,
  divider_width: section.settings.divider_width
%}

<div class="video-hero section--padding">
  <div class="{% if section.settings.container == 'full' %} w-full{% else %} page-width{% endif %}">
    <div class="relative overflow-hidden{% unless section.settings.container == 'full' %} blocks-radius{% endunless %}  custom-width">
      <parallax-element
        class="block overflow-hidden"
        {% if section.settings.enable_parallax %}
          data-parallax="{% if section.settings.parallax_direction == 'vertical' %}0.8{% else %}0.3{% endif %}"
          data-parallax-direction="{{ section.settings.parallax_direction }}"
        {% endif %}
      >
        <motion-element
          data-motion="fade-in"
          class="block media mb:media--{{ video_mobile_height }}{% if video_height == 'adapt' %} media--adapt{% else %} media--height media--{{ video_height }}{% endif %}"
          hold
        >
          <div class="video-desktop">
            {%- render 'video',
              sizes: '100vw',
              video: section.settings.video,
              video_url: section.settings.video_url,
              muted: true,
              autoplay: true,
              loop: true,
              description: section.settings.description,
              show_play_button: false,
              poster: section.settings.video_url.preview_image | image_url,
            -%}
          </div>
          <div class="video-mobile">
            {%- render 'video',
              sizes: '100vw',
              video: section.settings.video_mobile,
              video_url: section.settings.video_mobile_url,
              muted: true,
              autoplay: true,
              loop: true,
              description: section.settings.description,
              show_play_button: false,
              poster: section.settings.video_mobile_url.preview_image | image_url,
            -%}
          </div>
        </motion-element>
      </parallax-element>
       <div class="content-area page-width">
          <div class="video-hero__content absolute inset-0">
            <div class="content-overlay content-overlay--{{ section.settings.content_position }} color-{{ section.settings.color_scheme }}{% if section.settings.container == 'full' %} page-width{% endif %}">
              <div class="video-hero__content-wrapper relative z-1 rich-text text-{{ section.settings.content_alignment }} " style="max-width: {{ section.settings.max_width }}px;">
                {%- assign motion_delay = 50 -%}
                {% for block in section.blocks %}
                  {% case block.type %}
                    {% when 'subheading' %}
                      <motion-element
                        data-motion="fade-up"
                        data-motion-delay="{{ motion_delay }}"
                        class="block rich-text__subheading text-subheading"
                        {{ block.shopify_attributes }}
                      >
                        {{ block.settings.subheading }}
                      </motion-element>
                      {%- assign motion_delay = motion_delay | plus: 50 -%}
                    {% when 'heading' %}
                      <h2 class="rich-text__heading {{ block.settings.heading_size }}" {{ block.shopify_attributes }}>
                        <motion-element data-motion="fade-up" data-motion-delay="{{ motion_delay }}" class="block">
                          {% render 'highlight-text',
                            text: block.settings.heading,
                            style: block.settings.heading_highlight_style
                          %}
                        </motion-element>
                      </h2>
                      {%- assign motion_delay = motion_delay | plus: 50 -%}
                    {% when 'text' %}
                      <motion-element
                        data-motion="fade-up"
                        data-motion-delay="{{ motion_delay }}"
                        class="block rich-text__text rte {{ block.settings.text_size }}"
                        {{ block.shopify_attributes }}
                      >
                        {{- block.settings.text -}}
                      </motion-element>
                      {%- assign motion_delay = motion_delay | plus: 50 -%}
                    {% when 'button' %}
                      <motion-element class="block flex btn-wrapper" data-motion="fade-up" data-motion-delay="{{ motion_delay }}">
                        {% if block.settings.button_label_first != blank %}
                          <a
                            {% if block.settings.button_link_first != blank %}
                              href="{{ block.settings.button_link_first }}"
                            {% else %}
                              role="link" aria-disabled="true"
                            {% endif %}
                            class="btn {{ block.settings.button_style_first }}"
                            {{ block.shopify_attributes }}
                          >
                            {{- block.settings.button_label_first -}}
                          </a>
                        {% endif %}
                        {% if block.settings.button_label_second != blank %}
                          <a
                            {% if block.settings.button_link_second != blank %}
                            href="javascript:void(0);"
                            {% else %}
                              role="link" aria-disabled="true"
                            {% endif %}
                            class="btn {{ block.settings.button_style_second }} video-modal-trigger"
                            data-video-url="{{ block.settings.popup_video_url }}"
                            {{ block.shopify_attributes }} 
                          >
                            {{- block.settings.button_label_second -}}{% render 'icon-white-play'%}
                          </a>
                          {% endif %}
                          
                      </motion-element>
                      {%- assign motion_delay = motion_delay | plus: 50 -%}
                  {% endcase %}
                {% endfor %}
              </div>
            </div>
          </div>
       </div>
      <div
        class="video-hero__overlay bg-overlay absolute inset-0"
        style="--color-overlay-alpha: {{ section.settings.overlay_opacity }};"
      ></div>
    </div>
  </div>
</div>
