    .video-hero__content-wrapper .rich-text__subheading,
    .video-hero__content-wrapper .rich-text__heading,
    .video-hero__content-wrapper .rich-text__text,
    .video-hero__content-wrapper .btn-wrapper {
      transform: translateY(-20px);
      transition-duration: 0.5s;
    }
    .video-hero__content-wrapper.content-visible .rich-text__heading {
      transition-delay: 0.2s;
    }
    .video-hero__content-wrapper.content-visible .rich-text__text,
    .video-hero__content-wrapper.content-visible .btn-wrapper {
      transition-delay: 0.3s;
    }
    .video-desktop { display: none !important; }
    .video-mobile { display: block !important; }
