  #shopify-section-{{ section.id }} .white--btn--secondary,#shopify-section-{{ section.id }} .white--btn--secondary:before, 
  #shopify-section-{{ section.id }} .white--btn--secondary:hover:before{ transition: none;background:none;border:2px solid #fff;cursor:pointer}
  #shopify-section-{{ section.id }} .video-modal-trigger{cursor:pointer}

