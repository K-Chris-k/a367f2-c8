<style>
   {% comment %} #shopify-section-{{ section.id }}{margin-top:{{section.settings.padding_top  }}px;margin-bottom:{{section.settings.padding_bottom  }}px;} {% endcomment %}
   .video-popup-section {
     position: relative;
   }

  #shopify-section-{{ section.id }} .video-container {
     cursor: pointer;
     position: relative;
     overflow: hidden;
     margin: 0 auto;
     border-radius: 32px;
     transition: transform 0.3s ease;
   }

   #shopify-section-{{ section.id }} .video-thumbnail {
     width: 100%;
     height: 100%;
     object-fit: cover;
     transition: opacity 0.3s ease;
   }

