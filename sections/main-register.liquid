{{ 'customer.css' | asset_url | stylesheet_tag }}

<div
  class="customer register section section--padding"
  style="--section-padding-top: {{ section.settings.padding_top }}px;--section-padding-bottom: {{ section.settings.padding_bottom }}px;"
>
  <div class="section__wrapper">
    <div class="page-width">
      <div class="flex customer-box">
        <div class="customer-box__image">
          <div class="image-container">
            {% if section.settings.image != blank %}
              <picture>
                <source
                  media="(max-width: 749px)"
                  srcset="
                    {{ section.settings.mobile_image | default: section.settings.image | img_url: '800x' }} 1x,
                    {{ section.settings.mobile_image | default: section.settings.image | img_url: '1600x' }} 2x
                  "
                >
                <source
                  media="(min-width: 750px)"
                  srcset="
                    {{ section.settings.image | img_url: '1200x' }} 1x,
                    {{ section.settings.image | img_url: '2400x' }} 2x
                  "
                >
                <img
                  src="{{ blosectionck.settings.image | img_url: '1200x' }}"
                  alt="{{ section.settings.title | escape }}"
                  class="grid-image"
                  loading="lazy"
                  width="100%"
                  height="100%"
                >
              </picture>
            {% else %}
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
          </div>
        </div>
        <div class="customer-box__form">
          {% comment %} {%- if section.settings.logo_image != blank %}
            <div class="logo-img">
              <img
                src="{{ section.settings.logo_image | img_url: '148x' }}"
                alt="{{ 'customer.login_page.title' | t }}"
                width="148px"
                height="18px"
              >
            </div>
          {%- endif -%} {% endcomment %}
          <h1 class="title">
            {{ 'customer.register.title' | t }}
          </h1>
          {%- form 'create_customer', class: 'flex flex-col' -%}
            {%- if form.errors -%}
              <div class="form-error alert alert--error blocks-radius">
                <h2 class="form-message form-message--error h6 m-0" tabindex="-1" autofocus>
                  {% render 'icon-error', size: 'small' %}
                  {{ 'templates.contact.form.error_heading' | t }}
                </h2>
                <ul>
                  {%- for field in form.errors -%}
                    <li>
                      {%- if field == 'form' -%}
                        {{ form.errors.messages[field] }}
                      {%- else -%}
                        <a href="#RegisterForm-{{ field }}">
                          {{ form.errors.translated_fields[field] | capitalize }}
                          {{ form.errors.messages[field] }}
                        </a>
                      {%- endif -%}
                    </li>
                  {%- endfor -%}
                </ul>
              </div>
            {%- endif -%}
            <div class="form-field">
              {% comment %} <label for="RegisterForm-FirstName" class="form-label">
                {{ 'customer.register.first_name' | t }}
              </label> {% endcomment %}
              <input
                type="text"
                name="customer[first_name]"
                id="RegisterForm-FirstName"
                {% if form.first_name %}
                  value="{{ form.first_name }}"
                {% endif %}
                autocomplete="given-name"
                placeholder="{{ 'customer.register.first_name' | t }}"
                class="form-control"
              >
            </div>
            <div class="form-field">
              {% comment %} <label for="RegisterForm-LastName" class="form-label">
                {{ 'customer.register.last_name' | t }}
              </label> {% endcomment %}
              <input
                type="text"
                name="customer[last_name]"
                id="RegisterForm-LastName"
                {% if form.last_name %}
                  value="{{ form.last_name }}"
                {% endif %}
                autocomplete="family-name"
                placeholder="{{ 'customer.register.last_name' | t }}"
                class="form-control"
              >
            </div>
            <div class="form-field">
              {% comment %} <label for="RegisterForm-email" class="form-label">
                {{ 'customer.register.email' | t }}
              </label> {% endcomment %}
              <input
                required
                type="email"
                name="customer[email]"
                id="RegisterForm-email"
                {% if form.email %}
                  value="{{ form.email }}"
                {% endif %}
                spellcheck="false"
                autocapitalize="off"
                autocomplete="email"
                aria-required="true"
                {% if form.errors contains 'email' %}
                  aria-invalid="true"
                  aria-describedby="RegisterForm-email-error"
                {% endif %}
                placeholder="{{ 'customer.register.email' | t }}"
                class="form-control"
              >
              {%- if form.errors contains 'email' -%}
                <span id="RegisterForm-email-error" class="form-message form-message--small form-message--error">
                  {% render 'icon-error', size: 'small' %}
                  {{ form.errors.translated_fields.email | capitalize }}
                  {{ form.errors.messages.email }}.
                </span>
              {%- endif -%}
            </div>
            <div class="form-field">
              {% comment %} <label for="RegisterForm-password" class="form-label">
                {{ 'customer.register.password' | t }}
              </label> {% endcomment %}
              <input
                required
                type="password"
                name="customer[password]"
                id="RegisterForm-password"
                aria-required="true"
                {% if form.errors contains 'password' %}
                  aria-invalid="true"
                  aria-describedby="RegisterForm-password-error"
                {% endif %}
                placeholder="{{ 'customer.register.password' | t }}"
                class="form-control"
              >
              {%- if form.errors contains 'password' -%}
                <span id="RegisterForm-password-error" class="form-message form-message--small form-message--error">
                  {% render 'icon-error', size: 'small' %}
                  {{ form.errors.translated_fields.password | capitalize }}
                  {{ form.errors.messages.password }}.
                </span>
              {%- endif -%}
            </div>
            <button class="btn btn--primary w-full">
              {{ 'customer.register.submit' | t }}
            </button>
            <a href="{{ routes.account_login_url }}" class="btn btn--secondary self-center w-full">
              {{ 'customer.login_page.sign_in' | t }}
            </a>
            {% if section.settings.third_title != blank %}
              <div class="login-goole-fackbook"><span>{{ section.settings.third_title }}</span></div>
            {% endif %}
          {%- endform -%}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.main-register.name",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "标题"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "image"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "h5 image"
    },
    {
      "type": "image_picker",
      "id": "logo_image",
      "label": "logo image"
    },
    {
      "type": "text",
      "id": "third_title",
      "label": "第三方登录标题"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 100
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 100
    }
  ]
}
{% endschema %}
