  <script>
    function parseEuroPrice(priceStr) {
      if (!priceStr) return 0;
      return (
        parseFloat(
          priceStr
            .toString()
            .replace(/[^\d,]/g, '')
            .replace(',', '.')
        ) || 0
      );
    }

    // 统一计算所有推荐产品的总价（包括 Lookbook、Empfehlung 和 Cross Sell）
    function getSelectedBundleTotal() {
      let total = 0;

      // Lookbook 推荐产品
      document.querySelectorAll('.lb-select-on-click[lb-selected]').forEach((card) => {
        const priceEl = card.querySelector('.lb-price-sale-price');
        const price = priceEl ? parseEuroPrice(priceEl.textContent.trim()) : 0;
        const qtyInput = card.querySelector('input.lb-qty-count');
        const qty = qtyInput ? parseInt(qtyInput.value || '1', 10) : 1;
        total += price * qty;
      });

      // Empfehlung 推荐产品
      document.querySelectorAll('.recommendation-select-on-click[recommendation-selected]').forEach((card) => {
        // Shopify 价格以分为单位，需要转换为元
        const priceInCents = parseFloat(card.dataset.price) || 0;
        const price = priceInCents / 100;
        const qtyInput = card.querySelector('input.recommendation-qty-count');
        const qty = qtyInput ? parseInt(qtyInput.value || '1', 10) : 1;
        total += price * qty;
      });

      // Cross Sell 产品
      document.querySelectorAll('.cross-sell-product-card').forEach((card) => {
        const checkbox = card.querySelector('.cross-sell-checkbox');
        if (checkbox && checkbox.checked) {
          // Shopify 价格以分为单位，需要转换为元
          const priceInCents = parseFloat(card.dataset.price) || 0;
          const price = priceInCents / 100;
          const qtyInput = card.querySelector('.cross-sell-qty-input');
          const qty = qtyInput ? parseInt(qtyInput.value || '1', 10) : 1;
          total += price * qty;
        }
      });

      return total;
    }

    function updateBottomBarPrice() {
      // 检查是否是 Bundle 模式，如果是，不更新价格（让 Bundle 价格更新函数处理）
      const bundleConfigEl = document.querySelector('[id^="BundleProductsConfig-"]');
      if (bundleConfigEl) {
        // Bundle 模式：价格由 updateBundlePrice() 函数处理，这里不更新
        return;
      }

      const bundleTotal = getSelectedBundleTotal();
      const priceContainer = document.querySelector('.product__info-container');
      const salePriceTarget = priceContainer?.querySelector('.f-price-item--sale')
        ? priceContainer.querySelector('.f-price-item--sale')?.textContent || '0'
        : priceContainer?.querySelector('.f-price-item--regular')?.textContent || '0';
      const mainPrice = parseEuroPrice(salePriceTarget);
      const finalTotal = mainPrice + bundleTotal;
      const stickyContainer = document.querySelector('.sticky-atc-bar__inner .product-price-box');
      const lastPrice =
        stickyContainer?.querySelector('.f-price-item--sale') ||
        stickyContainer?.querySelector('.f-price-item--regular');
      if (lastPrice) {
        // 格式化价格
        const parts = finalTotal.toFixed(2).split('.');
        const integerPart = parts[0].replace(/\B(?=(\d{3})+(?!\d))/g, '.');
        const formattedPrice = integerPart + ',' + parts[1] + ' €';
        lastPrice.textContent = formattedPrice;
      }
    }

    function bindCardClickEvents() {
      // Lookbook 卡片点击事件
      document.querySelectorAll('.lb-product-card').forEach((card) => {
        card.addEventListener('click', () => {
          setTimeout(() => {
            updateBottomBarPrice();
          }, 50);
        });
      });

      // Cross Sell 卡片点击事件
      document.querySelectorAll('.cross-sell-product-card').forEach((card) => {
        card.addEventListener('click', () => {
          setTimeout(() => {
            updateBottomBarPrice();
          }, 50);
        });
      });

      // Empfehlung 卡片点击事件（通过事件委托处理，只在卡片选中状态改变时更新价格）
      const productInfo = document.querySelector('product-info[id^="MainProduct-"]');
      if (productInfo) {
        // 标志：是否正在静默恢复选中状态（避免触发价格更新）
        let isRestoringSilently = false;

        // 监听全局的静默恢复标志
        const originalRestore = window.restoreRecommendationSelection;
        if (originalRestore) {
          window.restoreRecommendationSelection = function (silent = false) {
            isRestoringSilently = silent;
            const result = originalRestore.call(this, silent);
            // 恢复标志在下一个事件循环中重置
            setTimeout(() => {
              isRestoringSilently = false;
            }, 200);
            return result;
          };
        }

        // 使用 MutationObserver 监听卡片选中状态的变化，而不是监听点击事件
        const observer = new MutationObserver((mutations) => {
          // 如果正在静默恢复，不更新价格
          if (isRestoringSilently) return;

          mutations.forEach((mutation) => {
            if (mutation.type === 'attributes' && mutation.attributeName === 'recommendation-selected') {
              setTimeout(updateBottomBarPrice, 50);
            }
            if (mutation.type === 'attributes' && mutation.attributeName === 'class') {
              const target = mutation.target;
              if (target.classList.contains('recommendation-select-on-click')) {
                const wasSelected = mutation.oldValue?.includes('selected');
                const isSelected = target.classList.contains('selected');
                if (wasSelected !== isSelected) {
                  setTimeout(updateBottomBarPrice, 50);
                }
              }
            }
          });
        });

        // 观察所有推荐产品卡片
        const observeCards = () => {
          document.querySelectorAll('.recommendation-select-on-click').forEach((card) => {
            observer.observe(card, {
              attributes: true,
              attributeOldValue: true,
              attributeFilter: ['recommendation-selected', 'class'],
            });
          });
        };

        // 初始观察
        observeCards();

        // 当 DOM 变化时重新观察（处理动态添加的卡片）
        const contentObserver = new MutationObserver(() => {
          observeCards();
        });
        if (productInfo) {
          contentObserver.observe(productInfo, {
            childList: true,
            subtree: true,
          });
        }
      }
    }

    function bindBundleListeners() {
      // Lookbook 数量选择器
      document.querySelectorAll('.lb-qty-count').forEach((input) => {
        input.addEventListener('input', updateBottomBarPrice);
        input.addEventListener('change', updateBottomBarPrice);
      });
      document.querySelectorAll('.lb-qty-add, .lb-qty-remove').forEach((btn) => {
        btn.addEventListener('click', () => setTimeout(updateBottomBarPrice, 100));
      });

      // Empfehlung 数量选择器（通过事件委托处理）
      const productInfo = document.querySelector('product-info[id^="MainProduct-"]');
      if (productInfo) {
        productInfo.addEventListener('click', (e) => {
          if (e.target.closest('.recommendation-quantity-btn')) {
            setTimeout(updateBottomBarPrice, 100);
          }
        });
        productInfo.addEventListener('input', (e) => {
          if (e.target.classList.contains('recommendation-qty-count')) {
            updateBottomBarPrice();
          }
        });
      }

      // Cross Sell 产品事件监听
      document.querySelectorAll('.cross-sell-product-card').forEach((card) => {
        const checkbox = card.querySelector('.cross-sell-checkbox');
        const qtyInput = card.querySelector('.cross-sell-qty-input');
        
        if (checkbox) {
          checkbox.addEventListener('change', () => setTimeout(updateBottomBarPrice, 50));
        }
        if (qtyInput) {
          qtyInput.addEventListener('input', updateBottomBarPrice);
          qtyInput.addEventListener('change', updateBottomBarPrice);
        }
      });
      document.querySelectorAll('.cross-sell-qty-btn').forEach((btn) => {
        btn.addEventListener('click', () => setTimeout(updateBottomBarPrice, 100));
      });
    }

    window.addEventListener('load', () => {
      bindCardClickEvents();
      bindBundleListeners();
      updateBottomBarPrice();
    });
  </script>

  {%- comment -%} URL 参数自动选择逻辑 {%- endcomment -%}
  <script>
    (function () {
      function getUrlParams() {
        const params = new URLSearchParams(window.location.search);
        return {
          battery: params.get('battery'), // 电池包 variant ID
          solar: params.get('solar'), // 太阳能板 variant ID
          mount: params.get('mount'), // 支架 variant ID
        };
      }

      function autoSelectFromUrl() {
        console.log('=================================================>重定向触发');

        const params = getUrlParams();

        // 如果没有任何参数，跳过
        if (!params.variant && !params.battery && !params.solar && !params.mount) {
          return;
        }

        console.log('[Bundle Auto Select] URL 参数:', params);

        // 延迟执行，确保 DOM 和 Bundle 逻辑准备好
        setTimeout(() => {

          // 1. 选择电池包（如果有 battery 参数）
          if (params.battery) {
            selectBattery(params.battery);
          }

          // 2. 选择太阳能板（如果有 solar 参数）
          if (params.solar) {
            selectSolarPanel(params.solar);
          }

          // 3. 选择支架（如果有 mount 参数）
          if (params.mount) {
            selectMount(params.mount);
          }

          // 4. 触发价格更新
          setTimeout(() => {
            if (typeof updateBundlePrice === 'function') {
              updateBundlePrice();
            }
          }, 200);
        }, 800);
      }


      // 电池包（根据 variant ID）
      function selectBattery(variantId) {
        const batteryBtn = document.querySelector(`.bundle-extension-btn[data-variant-id="${variantId}"]`);

        if (batteryBtn && !batteryBtn.classList.contains('disabled')) {
          console.log('[Bundle Auto Select] 选择电池包 variant:', variantId);

          // 触发点击事件，这样会自动执行所有相关的更新逻辑
          batteryBtn.click();
        } else {
          console.warn('[Bundle Auto Select] 未找到电池包按钮或按钮被禁用, variant ID:', variantId);
        }
      }

      // 太阳能板（根据 variant ID）
      function selectSolarPanel(variantId) {
        const solarFieldset = document.querySelector('.bundle-category-grid-fieldset[data-is-solar-product="true"]');

        if (!solarFieldset) {
          console.warn('[Bundle Auto Select] 未找到太阳能板 fieldset');
          return;
        }

        const solarBtn = solarFieldset.querySelector(`.bundle-category-btn[data-variant-id="${variantId}"]`);

        if (solarBtn && !solarBtn.classList.contains('disabled')) {
          console.log('[Bundle Auto Select] 选择太阳能板 variant:', variantId);

          // 触发点击事件
          solarBtn.click();
        } else {
          console.warn('[Bundle Auto Select] 未找到太阳能板按钮或按钮被禁用, variant ID:', variantId);
        }
      }

      // 支架（根据 variant ID）
      function selectMount(variantId) {
        const mountFieldsets = document.querySelectorAll(
          '.bundle-category-grid-fieldset[data-connect-solar-quantity="true"]'
        );

        let found = false;
        mountFieldsets.forEach((fieldset) => {
          if (found) return;

          const mountBtn = fieldset.querySelector(`.bundle-category-btn[data-variant-id="${variantId}"]`);

          if (mountBtn && !mountBtn.classList.contains('disabled')) {
            console.log('[Bundle Auto Select] 选择支架 variant:', variantId);

            // 触发点击事件
            mountBtn.click();
            found = true;
          }
        });

        if (!found) {
          console.warn('[Bundle Auto Select] 未找到支架按钮或按钮被禁用, variant ID:', variantId);
        }
      }

      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', autoSelectFromUrl);
      } else {
        autoSelectFromUrl();
      }
    })();
  </script>
