<style scoped>
  .black-friday-nav {
    position: relative;
    width: 100%;
    background: #3250C3;
    z-index: 10;
    box-shadow: none;
    transition: box-shadow 0.2s ease;
  }

  .black-friday-nav.sticky {
    position: fixed;
    top: 0;
  }
  .black-friday-nav .nav-list {
    display: flex;
    justify-content: center;
    list-style: none;
    margin: 0;
    padding: 0 12px;
    align-items: center;
    gap: 0;
    overflow-x: auto;
    -webkit-overflow-scrolling: touch; /* 平滑滚动体验 iOS */
    white-space: nowrap;
  }
  .black-friday-nav .nav-item {
    line-height: 48px;
  }
  .black-friday-nav .nav-list::-webkit-scrollbar {
    display: none;
  }
  
  .black-friday-nav .nav-link {
    display:block;
    text-decoration: none;
    color: #fff;
    font-weight: 500;
    padding: 0px 30px;
    transition: all 0.2s ease;
    position: relative;
    white-space: nowrap;
  }

   /* hover */
  .black-friday-nav .nav-link:hover {
    background: #91AFFA;
  }

  .black-friday-nav .nav-link.active,
  .black-friday-nav .nav-link[aria-current="true"]  {
    background: #91AFFA;
    color:#3250C3
  }
  @media (max-width: 768px) {
    .black-friday-nav { background: #3250C3}
    .black-friday-nav .nav-item{ margin:0px 15px;}
    .black-friday-nav .nav-list {
      justify-content: flex-start;
    }
    .black-friday-nav .nav-link {
      min-width: 92px;
      padding: 0px 10px;
      text-align: center;
      font-size: 14px;
      color:#fff
    }
    
  }
</style>
