<style>
   #shopify-section-{{ section.id }} {padding-top: {{ section.settings.padding_top }}px;padding-bottom: {{ section.settings.padding_bottom }}px;}
  .section-{{ section.id }} .h2-title {line-height:56px;font-size: 46px;text-align:center}
  .section-{{ section.id }} .content{line-height:22px;font-size: 18px;text-align:center;color: #666;}
  .section-{{ section.id }} .tabs-wraper{margin-top:60px;}
  .section-{{ section.id }} .tabs__header {padding-top:0; margin-top: 60px;}
  .section-{{ section.id }} .tabs__nav{gap:40px;border-bottom: 1px solid #DEDEDE;}
  .section-{{ section.id }} .tabs__nav-design-1 .tabs__tab { padding:0px 0px 10px 0px;border-radius: 0px;line-height:24px;font-size:20px}
  .tabs__nav-design-1 .tabs__tab:hover:before, .tabs__nav-design-1 .tabs__tab[aria-selected=true]:before{background:#3250c3}
  .section-{{ section.id }} .tabs__tab:before{height:2px;background:transparent}
  .section-{{ section.id }} .flex-wrap{flex-flow: column-reverse;background:none}
  .section-{{ section.id }} .collage-tab__content{max-width: 100%;}
  .section-{{ section.id }} .tabs__header{margin-bottom:0px}
  .section-{{ section.id }} .collage-tab__description {padding: 0 3.2rem; margin-top: 23px; color:#666; text-align: center;}
  .section-{{ section.id }} .tabs__tab span,.section-{{ section.id }} .collage-tab__description p{font-family: 'Inter';line-height:22px;font-size: 18px;}
  .section-{{ section.id }} .collage-tab__content{padding:1.8rem 3.2rem 2.4rem 3.2rem;color:#666}
  .section-{{ section.id }} .tabs__content {margin-bottom: 0;}
  
  /* 视频样式 */
  .section-{{ section.id }} .collage-tab__video {
    width: 100%;
    height: auto;
    {% comment %} border-radius: 8px; {% endcomment %}
  }
  .section-{{ section.id }} .video-wrapper {
    margin-top:60px;
    position: relative;
    width: 100%;
  }

  @media (max-width: 767.98px) {
    #shopify-section-{{ section.id }} {padding-top: {{ section.settings.padding_top | divided_by: 2 }}px;padding-bottom: {{ section.settings.padding_bottom | divided_by: 2}}px;}
    .section-{{ section.id }} {padding-left:0px;padding-right:0px}
    .section-{{ section.id }} .tabs-wraper{margin-top:3rem;}
    .section-{{ section.id }} .tabs__header{padding-top:0; margin-top: 15px;}
    .section-{{ section.id }} .tabs__nav-design-1 .tabs__tab { min-width: 110px;max-width:120px;}
    .section-{{ section.id }} .tabs__nav{gap:2.7rem;margin: 0px 1rem;}
    .section-{{ section.id }} .h2-title {line-height:34px;font-size: 28px;}
    .section-{{ section.id }} .content{line-height:19px;font-size: 16px;}
    .section-{{ section.id }} .collage-tab__video{height:auto;max-height:300px}
    .section-{{ section.id }} .collage-tab__description {margin-top:1.5rem;padding: 0.5rem 2rem 0rem;}
    .section-{{ section.id }} .tabs__tab span,.section-{{ section.id }} .collage-tab__description p{line-height:17px;font-size: 14px;}
    .section-{{ section.id }} .video-wrapper { margin-top:30px;}
  }
  @media (max-width: 429px) {
    .section-{{ section.id }} .tabs__nav{gap:1rem}
  }
</style>
{% render 'divider',
  show_divider: section.settings.show_section_divider,
  divider_width: section.settings.divider_width
%}
<div
  class="section section-{{ section.id }} section--collage-tabs page-width color-{{ section.settings.color_scheme }}"
  data-id="{{ section.id }}"  id="{{section.settings.ids}}"
>   {%- if section.settings.title !=blank -%}
    <h2 class="h2-title">
      <motion-element class="block" data-motion="fade-up" data-motion-delay="{{ motion_delay }}"> <span>{{ section.settings.title }}</span></motion-element>
    </h2>
    {% endif %}
     {%- if section.settings.description !=blank -%}
    <p class="content">
      <motion-element class="block" data-motion="fade-up" data-motion-delay="{{ motion_delay }}"> <span>{{ section.settings.description }}</span></motion-element>
    </p>
    {% endif %}
  {%- if section.blocks.size > 0 -%}
    <div class="tabs-wraper">
    <tabs-component class="tabs tabs__nav-{{ nav_style }}">
      <div class="tabs__header flex justify-{{ section.settings.desktop_navigation_alignment }}" role="tablist">
        <div class="tabs__nav-wrap">
          <div class="tabs__nav">
            {%- for block in section.blocks -%}
              {%- liquid
                if block.settings.navigation_title != blank
                  assign tab_name = block.settings.navigation_title
                else
                  assign tab_name = 'Tab ' | append: forloop.index
                endif
              -%}
              <button class="tabs__tab focus-inset" role="tab" id="{{- block.id -}}" {{ block.shopify_attributes }}>
                <span class="tabs__tab-name {{ section.settings.heading_size }}">{{- tab_name -}}</span>
              </button>
            {%- endfor -%}
          </div>
        </div>
      </div>
      
      <div class="tabs__description-panel">
        {%- for block in section.blocks -%}
          <div
            class="collage-tab__description"
            id="tab-desc-{{ block.id }}"
            data-index="{{ forloop.index0 }}"
            {% unless forloop.first %}
              hidden
            {% endunless %}
          >
            <div class="collage-tab__content-inner rich-text flex flex-col w-full text-{{ block.settings.text_alignment }}">
              {%- if block.settings.subheading != blank -%}
                <motion-element
                  data-motion="fade-up"
                  data-motion-delay="{{ motion_delay }}"
                  class="block rich-text__subheading text-subheading"
                >
                  {{ block.settings.subheading }}
                </motion-element>
                {%- assign motion_delay = motion_delay | plus: 50 -%}
              {%- endif -%}
              {%- if block.settings.description != blank -%}
                <motion-element
                  data-motion="fade-up"
                  data-motion-delay="{{ motion_delay }}"
                  class="block rich-text__text rte {{ block.settings.text_size }}"
                >
                  {{ block.settings.description }}
                </motion-element>
                {%- assign motion_delay = motion_delay | plus: 50 -%}
              {%- endif -%}
            </div>
          </div>
        {%- endfor -%}
      </div>
      
      <div class="tabs__panel">
        {%- for block in section.blocks -%}
          {%- liquid
            assign aspect_ratio = section.settings.video_aspect_ratio | default: '16/9'
            if aspect_ratio == 'adapt'
              assign aspect_ratio = '16/9'
            endif
          -%}
          <div
            class="tabs__content"
            id="tab-{{ block.id }}"
            data-index="{{ forloop.index0 }}"
            role="tabpanel"
            {% unless forloop.first %}
              hidden
            {% endunless %}
          >
            <div
              class="flex flex-wrap color-{{ block.settings.content_color_scheme }}"
              style="{{ tab_inline_style }}"
            >
              <div
                class="collage-tab__video video-wrapper{% if section.settings.desktop_video_position == 'right' %} md:order-last{% endif %}"
                style="--aspect-ratio: {{ aspect_ratio }};"
              >
                {%- if block.settings.video != blank -%}
                  {{ block.settings.video | video_tag: 
                    class: 'collage-tab__video-element', 
                    autoplay: block.settings.autoplay,
                    loop: block.settings.loop,
                    muted: block.settings.muted,
                    controls: block.settings.controls,
                    playsinline: true,
                    preload: 'metadata'
                  }}
                {%- elsif block.settings.video_url != blank -%}
                  {%- if block.settings.video_url.type == 'youtube' -%}
                    <iframe
                      class="collage-tab__video-element"
                      src="https://www.youtube.com/embed/{{ block.settings.video_url.id }}?autoplay={% if block.settings.autoplay %}1{% else %}0{% endif %}&loop={% if block.settings.loop %}1{% else %}0{% endif %}&playlist={{ block.settings.video_url.id }}&mute={% if block.settings.muted %}1{% else %}0{% endif %}&controls={% if block.settings.controls %}1{% else %}0{% endif %}"
                      frameborder="0"
                      allow="autoplay; encrypted-media"
                      allowfullscreen
                    ></iframe>
                  {%- elsif block.settings.video_url.type == 'vimeo' -%}
                    <iframe
                      class="collage-tab__video-element"
                      src="https://player.vimeo.com/video/{{ block.settings.video_url.id }}?autoplay={% if block.settings.autoplay %}1{% else %}0{% endif %}&loop={% if block.settings.loop %}1{% else %}0{% endif %}&muted={% if block.settings.muted %}1{% else %}0{% endif %}&controls={% if block.settings.controls %}1{% else %}0{% endif %}"
                      frameborder="0"
                      allow="autoplay; encrypted-media"
                      allowfullscreen
                    ></iframe>
                  {%- endif -%}
                {%- else -%}
                  <div class="video-placeholder" style="background: #f5f5f5; display: flex; align-items: center; justify-content: center; height: 100%;">
                    <span>请上传视频</span>
                  </div>
                {%- endif -%}
              </div>
            </div>
          </div>
        {%- endfor -%}
      </div>
    </tabs-component>
    </div>
  {%- endif -%}
</div>
<script>
document.addEventListener('DOMContentLoaded', function() {
  const tabComponents = document.querySelectorAll('tabs-component');
  tabComponents.forEach(component => {
    const tabs = component.querySelectorAll('.tabs__tab');
    const contents = component.querySelectorAll('.tabs__content');
    const descriptions = component.querySelectorAll('.collage-tab__description');
    
    tabs.forEach((tab, index) => {
      tab.addEventListener('click', () => {
        tabs.forEach(t => t.classList.remove('is-active'));
        contents.forEach(c => c.setAttribute('hidden', ''));
        descriptions.forEach(d => d.setAttribute('hidden', ''));
        tab.classList.add('is-active');
        if (contents[index]) contents[index].removeAttribute('hidden');
        if (descriptions[index]) descriptions[index].removeAttribute('hidden');
        
        // 暂停所有视频
        const videos = component.querySelectorAll('video');
        videos.forEach(video => {
          video.pause();
        });
        
        // 自动播放当前标签的视频（如果设置了自动播放）
        const currentVideo = contents[index].querySelector('video');
        if (currentVideo && currentVideo.hasAttribute('autoplay')) {
          currentVideo.play().catch(e => console.log('Autoplay prevented:', e));
        }
      });
    });
  });
});
</script>
