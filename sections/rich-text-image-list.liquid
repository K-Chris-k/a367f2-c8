<style>
    #shopify-section-{{ section.id }} .rich-text-list-section{padding-top: {{ section.settings.padding_top }}px;padding-bottom: {{ section.settings.padding_bottom }}px;}
    #shopify-section-{{ section.id }} .rich-text{flex-flow: column;}
    #shopify-section-{{ section.id }} p{ font-family: 'Inter';line-height:22px; font-size:18px;color: #666;}
    #shopify-section-{{ section.id }} .image-wrapper-container{margin:0px;}
    #shopify-section-{{ section.id }} .image-wrapper-container .image-wrapper{margin-top:{{ section.settings.image_top }}px}
    #shopify-section-{{ section.id }} .details-box{gap:168px}
    #shopify-section-{{ section.id }} .details-box .item{display: flex;flex-flow: column;}
    #shopify-section-{{ section.id }} .details-box strong{line-height: 44px;font-weight: 700;font-size: 36px;background: linear-gradient(180deg, #3250C3 0%, #91AFFA 100%);
    -webkit-background-clip: text;-webkit-text-fill-color: transparent;}
    #shopify-section-{{ section.id }} .details-box span{line-height: 22px;font-size: 18px}
    #shopify-section-{{ section.id }} .h3{font-size: 30px;line-height: 36px;font-weight: 500;}
    #shopify-section-{{ section.id }} .text-base p{ font-family: 'Inter'; line-height: 17px;font-size:14px; }
    #shopify-section-{{ section.id }} .container-full {width: 100vw;margin-left: calc(-50vw + 50%);}
    #shopify-section-{{ section.id }} .container-full .grid-image {width: 100%;height: auto;object-fit: contain; }
    #shopify-section-{{ section.id }} .grid-image { width: revert-layer;height: auto;object-fit: contain; }

    /* 新增视频区块样式 */
    #shopify-section-{{ section.id }} .video-popup-block {
      margin-top: 40px;
    }

    #shopify-section-{{ section.id }} .video-container-inner {
      position: relative;
      overflow: hidden;
      cursor: pointer;
    }

    #shopify-section-{{ section.id }} .video-thumbnail {
       width: 100%;
       height: 100%;
       object-fit:contain;
       transition: opacity 0.3s ease;
     }

    .play-button {
       position: absolute;
       top: 50%;
       left: 50%;
       transform: translate(-50%, -50%);
       width: 50px;
       height: 50px;
       display: flex;
       justify-content: center;
       align-items: center;
       color:#fff;
       transition: transform 0.2s ease;
    }

    .video-modal {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0,0,0,0.9);
      z-index: 1000;
      align-items: center;
      justify-content: center;
      opacity: 0;
      transition: opacity 0.3s ease;
    }

    .video-modal.active {
      display: flex;
      opacity: 1;
    }

    .video-modal .modal-content {
      width: 90%;
      max-width: 1000px;
      position: relative;
      padding:0px;
      background:none;
      border:none
    }

    .close-button {
      position: absolute;
      top: -50px;
      right: 0;
      background: none;
      border: none;
      color: white;
      font-size: 40px;
      cursor: pointer;
    }

    .video-player {
      position: relative;
      padding-bottom: 56.25%;
      height: 0;
      overflow: hidden;
    }

    .video-player iframe,
    .video-player video {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      border: none;
    }
    #shopify-section-{{ section.id }} .video-container-custom {
      position: relative;
      margin-top:60px;
      overflow: hidden;
      /* aspect-ratio: {{ section.settings.video_aspect_ratio }};  */
    }
    #shopify-section-{{ section.id }} .custom-video {
      width: 100%;
      height: 100%;
      display: block;
      object-fit: cover;
      /* border-radius: {{ section.settings.video_radius }}px;  */
    }
    #shopify-section-{{ section.id }} .hd2 strong{display:block}
    {% comment %} #shopify-section-{{ section.id }} .video-controls {
      display:none;
      position: absolute;
      bottom: 20px;
      left: 50%;
      transform: translateX(-50%);
      display: flex;
      gap: 15px;
      z-index: 2;
    }
    #shopify-section-{{ section.id }} .video-play-button,
    #shopify-section-{{ section.id }} .video-sound-button {
      width: 44px;
      height: 44px;
      border-radius: 50%;
      background: rgba(255, 255, 255, 0.8);
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      transition: all 0.3s ease;
    }
    #shopify-section-{{ section.id }} .video-play-button:hover,
    #shopify-section-{{ section.id }} .video-sound-button:hover {
      background: rgba(255, 255, 255, 1);
      transform: scale(1.1);
    }
    #shopify-section-{{ section.id }} .video-placeholder {
      background: #f5f5f5;
      display: flex;
      align-items: center;
      justify-content: center;
