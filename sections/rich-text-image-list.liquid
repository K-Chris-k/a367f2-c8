{%- assign motion_delay = 50 -%}
<div class="section section--padding rich-text-list-section color-{{ section.settings.color_scheme }}" id="{{section.settings.ids}}" style="background-color: {{ section.settings.bg_color }};">
  <div class="rich-text-list">
    <div class="rich-text  md:flex items-{{ section.settings.content_alignment }} text-{{ section.settings.mobile_content_alignment }} md:text-{{ section.settings.content_alignment }}">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'subheading' %}
            <motion-element
              data-motion="fade-up"
              data-motion-delay="{{ motion_delay }}"
              class="block page-width rich-text__subheading text-subheading"
              {{ block.shopify_attributes }}
            >
              {{ block.settings.subheading }}
            </motion-element>  

            {%- assign motion_delay = motion_delay | plus: 50 -%}
          {% when 'heading' %}
            <h2
              class="page-width rich-text__heading {{ block.settings.heading_size }}"
              {{ block.shopify_attributes }}
            >
              <motion-element class="block" data-motion="fade-up" data-motion-delay="{{ motion_delay }}">
                 {% if section.settings.show_title_icon != false %}
                   {% render 'icon-gift' -%}
                 {% endif %}
                {% render 'highlight-text',
                  text: block.settings.heading,
                  style: block.settings.heading_highlight_style
                %}
                {% if section.settings.show_title_icon != false %}
                   {% render 'icon-gift' -%}
                 {% endif %}
              </motion-element>
            </h2>
            {%- assign motion_delay = motion_delay | plus: 50 -%}
          {% when 'text' %}
            <motion-element
              data-motion="fade-up"
              data-motion-delay="{{ motion_delay }}"
              class="block page-width rich-text__text rte {{ block.settings.text_size }}"
              {{ block.shopify_attributes }}
            >
              {{ block.settings.text }}
            </motion-element>
            {%- assign motion_delay = motion_delay | plus: 50 -%}
          {% when 'details' %}
            <motion-element
              data-motion="fade-up"
              data-motion-delay="{{ motion_delay }}"
              class="block page-width rich-text__text rte {{ block.settings.text_size }}"
              {{ block.shopify_attributes }}
            >
              {% if block.settings.details1 != blank or block.settings.detail1_description != blank %}
                <div class="flex justify-center details-box">
                  <div class="item">
                    <strong> {{ block.settings.details1 }}</strong
                    ><span>{{ block.settings.detail1_description }} </span>
                  </div>
                  <div class="item">
                    <strong> {{ block.settings.details2 }}</strong
                    ><span>{{ block.settings.detail2_description }} </span>
                  </div>
                </div>
              {% endif %}
            </motion-element>
          {% when 'button' %}
            <motion-element
              class="block page-width "
              data-motion="fade-up"
              data-motion-delay="{{ motion_delay }}"
            >
              {% if block.settings.button_label != blank %}
                <a
                  {% if block.settings.button_link != blank %}
                    href="{{ block.settings.button_link }}"
                  {% else %}
                    role="link" aria-disabled="true"
                  {% endif %}
                  class="btn {{ block.settings.button_style }}"
                  {{ block.shopify_attributes }}
                >
                  {{- block.settings.button_label -}}
                </a>
              {% endif %}
            </motion-element>
            {%- assign motion_delay = motion_delay | plus: 50 -%}
          {% when 'image' %}
            {% if block.settings.image != blank %}
               {% if section.settings.img-href != blank %}
                  <a href="{{ section.settings.img-href}}" style="margin:0;"> 
               {% endif %}
                
              
              <div class="{% if block.settings.container == 'fixed' %} page-width{% else %} container-full{% endif %} image-wrapper-container">
                <div class="image-wrapper ">
                <picture>
                  <!-- 移动端图片 -->
                  <source
                    media="(max-width: 749px)"
                    srcset="
                      {{ block.settings.mobile_image | img_url: '800x' }} 1x,
                      {{ block.settings.mobile_image | img_url: '1600x' }} 2x
                    "
                  >

                  <!-- 桌面端图片 -->
                  <source
                    media="(min-width: 750px)"
                    srcset="
                      {{ block.settings.image | img_url: '1200x' }} 1x,
                      {{ block.settings.image | img_url: '2400x' }} 2x
                    "
                  >

                  <!-- 默认图片 -->
                  <img
                    src="{{ block.settings.image | img_url: '1200x' }}"
                    alt="{{ block.settings.title | escape }}"
                    class="grid-image"
                    loading="lazy"
                    width="{{ block.settings.image.width }}"
                    height="{{ block.settings.image.height }}"
                  >
                </picture>
                </div>
              </div>
               {% if section.settings.img-href != blank %}
                   </a>
               {% endif %}
            {% else %}
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
          {% when 'video_popup' %}
            <motion-element
              data-motion="fade-up"
              data-motion-delay="{{ motion_delay }}"
              class="block page-width video-popup-block"
              {{ block.shopify_attributes }}
            >
              <div class="md:flex justify-{{ block.settings.video_alignment }} section-video-box">
                {%- liquid
                  assign video_type = block.settings.video_type
                  assign autoplay = block.settings.autoplay
                  assign thumbnail_url = ''

                  # YouTube视频处理
                  if video_type == 'youtube' and block.settings.youtube_url != blank
                    assign video_id = block.settings.youtube_url | split: 'v=' | last | split: '&' | first

                    if block.settings.custom_thumbnail != blank
                      assign thumbnail_url = block.settings.custom_thumbnail | img_url: '800x'
                    else
                      assign thumbnail_url = 'https://img.youtube.com/vi/' | append: video_id | append: '/maxresdefault.jpg'
                    endif
                  endif

                  # Shopify自有视频处理
                  if video_type == 'shopify' and block.settings.shopify_video != blank
                    assign video_url = block.settings.shopify_video

                    if block.settings.cover_image != blank
                      assign thumbnail_url = block.settings.cover_image | img_url: '800x'
                    else
                      assign thumbnail_url = settings.video_thumbnail | img_url: '800x'
                    endif
                  endif
                -%}

                <div
                  class="video-container-inner"
                  style="width: {{ block.settings.video_width }}px; height: {{ block.settings.video_height }}px;"
                  data-video-type="{{ video_type }}"
                  {% if video_type == 'youtube' %}
                    data-video-id="{{ video_id }}"
                  {% elsif video_type == 'shopify' %}
                    data-video-url="{{ video_url }}"
                  {% endif %}
                >
                  {% if thumbnail_url != blank %}
                    <img
                      class="video-thumbnail"
                      src="{{ thumbnail_url }}"
                      alt="{{ block.settings.alt_text | default: 'Video thumbnail' }}"
                      loading="lazy"
                      width="800"
                      height="{{ 800 | divided_by: 1.77 | round }}"
                    >
                  {% else %}
                    <div class="video-placeholder">
                      {{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg' }}
                    </div>
                  {% endif %}

                  <div class="play-button" aria-label="Play video"></div>
                </div>
              </div>
            </motion-element>
            {%- assign motion_delay = motion_delay | plus: 50 -%}
           {% when 'video' %}
              {% comment %} <motion-element
                data-motion="fade-up"
                data-motion-delay="{{ motion_delay }}"
                class="block"
              > {% endcomment %}
                <div class="page-width video-container-custom">
                  {% if block.settings.video != blank %}
                    <!-- 自有上传视频 -->
                    {% assign video_sources = block.settings.video.sources %}
                    
                    {% comment %} <div class="media-wrapper video-wrapper"> {% endcomment %}
                      <video 
                        class="custom-video" 
                        {% if block.settings.autoplay %}autoplay{% endif %} 
                        {% if block.settings.loop %}loop{% endif %} 
                        {% if block.settings.muted %}muted{% endif %} 
                        playsinline
                        id="video-{{ block.id }}"
                      >
                      {% for source in video_sources %}
                          <source src="{{ source.url }}" type="{{ source.mime_type }}">
                        {% endfor %}
                        您的浏览器不支持视频标签。
                      </video>
                    {% comment %} </div> {% endcomment %}
                    <!-- 视频控制按钮 -->
                    {% comment %} <div class="video-controls">
                      <div class="video-play-button" data-video-id="video-{{ block.id }}">
                        <svg width="18" height="18" viewBox="0 0 24 24">
                          <path class="play-icon" d="M8 5v14l11-7z" fill="currentColor"/>
                          <path class="pause-icon" d="M6 19h4V5H6v14zm8-14v14h4V5h-4z" fill="currentColor" style="display:none;"/>
                        </svg>
                      </div>
                      {% unless block.settings.muted %}
                        <div class="video-sound-button" data-video-id="video-{{ block.id }}">
                          <svg width="18" height="18" viewBox="0 0 24 24">
                            <path class="sound-on-icon" d="M3 9v6h4l5 5V4L7 9H3zm13.5 3c0-1.77-1.02-3.29-2.5-4.03v8.05c1.48-.73 2.5-2.25 2.5-4.02zM14 3.23v2.06c2.89.86 5 3.54 5 6.71s-2.11 5.85-5 6.71v2.06c4.01-.91 7-4.49 7-8.77s-2.99-7.86-7-8.77z" fill="currentColor"/>
                            <path class="sound-off-icon" d="M16.5 12c0-1.77-1.02-3.29-2.5-4.03v2.21l2.45 2.45c.03-.2.05-.41.05-.63zm2.5 0c0 .94-.2 1.82-.54 2.64l1.51 1.51C20.63 14.91 21 13.5 21 12c0-4.28-2.99-7.86-7-8.77v2.06c2.89.86 5 3.54 5 6.71zM4.27 3L3 4.27 7.73 9H3v6h4l5 5v-6.73l4.25 4.25c-.67.52-1.42.93-2.25 1.18v2.06c1.38-.31 2.63-.95 3.69-1.81L19.73 21 21 19.73l-9-9L4.27 3zM12 4L9.91 6.09 12 8.18V4z" fill="currentColor" style="display:none;"/>
                          </svg>
                        </div>
                      {% endunless %}
                    </div> {% endcomment %}
                  {% elsif block.settings.video_url != blank %}
                    <!-- 外部视频（YouTube/Vimeo） -->
                    {% if block.settings.video_url.type == 'youtube' %}
                      <iframe
                        src="https://www.youtube.com/embed/{{ block.settings.video_url.id }}?autoplay=0&mute=1&loop=1&controls=1"
                        class="js-youtube"
                        allow="autoplay; encrypted-media"
                        allowfullscreen
                        title="{{ block.settings.description | escape }}"
                      ></iframe>
                    {% elsif block.settings.video_url.type == 'vimeo' %}
                      <iframe
                        src="https://player.vimeo.com/video/{{ block.settings.video_url.id }}?autoplay=0&muted=1&loop=1&controls=1"
                        class="js-vimeo"
                        allow="autoplay; encrypted-media"
                        allowfullscreen
                        title="{{ block.settings.description | escape }}"
                      ></iframe>
                    {% endif %}
                  {% else %}
                    {% comment %} <div class="video-placeholder">
                      {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
                    </div> {% endcomment %}
                  {% endif %}
                </div>
              {% comment %} </motion-element> {% endcomment %}
              {%- assign motion_delay = motion_delay | plus: 50 -%}
          {% endcase %}
      {% endfor %}
    </div>
  </div>
</div>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    const videoModal = document.querySelector('.video-modal');
    const videoPlayer = document.querySelector('.video-player');
    const closeBtn = document.querySelector('.close-button');

    // 关闭弹窗
    function closeModal() {
      videoModal.classList.remove('active');
      document.body.style.overflow = '';
      videoPlayer.innerHTML = '';
    }

    // 点击关闭按钮
    closeBtn.addEventListener('click', closeModal);

    // 点击模态框外部关闭
    videoModal.addEventListener('click', function (e) {
      if (e.target === videoModal) closeModal();
    });

    // 处理视频容器点击
    document.querySelectorAll('.video-container-inner').forEach((container) => {
      container.addEventListener('click', function () {
        const videoType = this.dataset.videoType;

        if (videoType === 'youtube') {
          const videoId = this.dataset.videoId;
          videoPlayer.innerHTML = `
          <iframe 
            src="https://www.youtube.com/embed/${videoId}?autoplay=1&rel=0" 
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
            allowfullscreen>
          </iframe>
        `;
        } else if (videoType === 'shopify') {
          const videoUrl = this.dataset.videoUrl;
          videoPlayer.innerHTML = `
          <video controls autoplay playsinline>
            <source src="${videoUrl}" type="video/mp4">
            Your browser does not support the video tag.
          </video>
        `;
        }

        videoModal.classList.add('active');
        document.body.style.overflow = 'hidden';
      });
    });

     
  });
</script>
