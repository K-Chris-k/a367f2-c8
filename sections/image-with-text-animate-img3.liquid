{%- assign motion_delay = 50 -%}
<div
  class="section section--padding rich-text-list-section color-{{ section.settings.color_scheme }}"
  id="{{section.settings.ids}}"
>
  <div class="rich-text-list">
    <div class="rich-text  md:flex items-{{ section.settings.content_alignment }} text-{{ section.settings.mobile_content_alignment }} md:text-{{ section.settings.content_alignment }}">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'subheading' %}
            <h2
              class="page-width rich-text__heading {{ block.settings.heading_size }} subheading {% if block.settings.padding_top  %}subtitle_top{% endif %}"
              {{ block.shopify_attributes }}
              style="padding-top: {{ block.settings.padding_top }}px;"
            >
              <motion-element class="block" data-motion="fade-up" data-motion-delay="{{ motion_delay }}">
                {{ block.settings.subheading }}
              </motion-element>
            </h2>
            {%- assign motion_delay = motion_delay | plus: 50 -%}
          {% when 'heading' %}
            <h2
              class="page-width rich-text__heading {{ block.settings.heading_size }}"
              {{ block.shopify_attributes }}
            >
              <motion-element class="block" data-motion="fade-up" data-motion-delay="{{ motion_delay }}">
                {% render 'highlight-text',
                  text: block.settings.heading,
                  style: block.settings.heading_highlight_style
                %}
              </motion-element>
            </h2>
            {%- assign motion_delay = motion_delay | plus: 50 -%}
          {% when 'text' %}
            <motion-element
              data-motion="fade-up"
              data-motion-delay="{{ motion_delay }}"
              class="block page-width rich-text__text rte {{ block.settings.text_size }}"
              {{ block.shopify_attributes }}
            >
              {{ block.settings.text }}
            </motion-element>
            {%- assign motion_delay = motion_delay | plus: 50 -%}
          {% when 'image_list' %}
            <motion-element
              data-motion="fade-up"
              data-motion-delay="{{ motion_delay }}"
              class="block page-width rich-text__list rte {{ block.settings.list_size }}"
              {{ block.shopify_attributes }}
            >
              <div class="flex image-list-box image-list-slick" id="imageListAccordion">
                {% for i in (1..4) %}
                  {% assign image_key = 'image_' | append: i %}
                  {% assign mobile_image_key = 'mobile_image_' | append: i %}
                  {% assign title_key = 'title_' | append: i %}
                  {% assign desc_key = 'desc_' | append: i %}
                  {% assign icon_key = 'icon_' | append: i %}
                  {% assign mobile_icon_key = 'mobile_icon_' | append: i %}
                  {% assign image = block.settings[image_key] %}
                  {% assign mobile_image = block.settings[mobile_image_key] %}
                  {% assign title = block.settings[title_key] %}
                  {% assign desc = block.settings[desc_key] %}
                  {% assign icon = block.settings[icon_key] %}
                  {% assign mobile_icon =  block.settings[mobile_icon_key] %}
                  {% if image != blank %}
                    <div class="image-list-item{% if forloop.first %} active{% endif %}">
                      <div class="image-wrapper">
                        <picture>
                          <!-- 移动端图片 -->
                          <source
                            media="(max-width: 749px)"
                            srcset="
                              {{ mobile_image | img_url: '800x' }} 1x,
                              {{ mobile_image | img_url: '1600x' }} 2x
                            "
                          >

                          <!-- 桌面端图片 -->
                          <source
                            media="(min-width: 750px)"
                            srcset="
                              {{ image | img_url: '1200x' }} 1x,
                              {{ image| img_url: '2400x' }} 2x
                            "
                          >

                          <!-- 默认图片 -->
                          <img
                            src="{{ image | img_url: '1200x' }}"
                            alt="{{ image | escape }}"
                            class="grid-image"
                            loading="lazy"
                            width="{{ image.width }}"
                            height="{{ image.height }}"
                          >
                        </picture>
                      </div>
                      <div class="content-wrapper">
                        {% if icon != blank %}
                         <picture>
                          <!-- 移动端图片 -->
                          <source
                            media="(max-width: 749px)"
                            srcset="
                              {{ mobile_icon | img_url: '800x' }} 1x,
                              {{ mobile_icon | img_url: '1600x' }} 2x
                            "
                          >

                          <!-- 桌面端图片 -->
                          <source
                            media="(min-width: 750px)"
                            srcset="
                              {{ icon | img_url: '1200x' }} 1x,
                              {{ icon| img_url: '2400x' }} 2x
                            "
                          >

                          <!-- 默认图片 -->
                          <img
                            src="{{ icon | img_url: '1200x' }}"
                            alt="{{ icon | escape }}"
                            class="icon-img"
                            loading="lazy"
                            width="{{ icon.width }}"
                            height="{{ icon.height }}"
                          >
                        </picture>
                        {% endif %}
                        {% if title != blank %}
                          <h3 class="h3">{{ title }}</h3>
                        {% endif %}
                        {% if desc != blank %}
                          <div class="text-desc">
                            {{ desc }}
                          </div>
                        {% endif %}
                      </div>
                    </div>
                  {% endif %}
                {% endfor %}
              </div>
            </motion-element>
            {%- assign motion_delay = motion_delay | plus: 50 -%}
          {% when 'big_image' %}
            {% if block.settings.image != blank %}
              <div class="relative image-wrapper-container" id="animated-image-container">
                <div class="relative image-wrapper">
                  <picture>
                    <!-- 移动端图片 -->
                    <source
                      media="(max-width: 749px)"
                      srcset="
                        {{ block.settings.mobile_image | img_url: '800x' }} 1x,
                        {{ block.settings.mobile_image | img_url: '1600x' }} 2x
                      "
                    >

                    <!-- 桌面端图片 -->
                    <source
                      media="(min-width: 750px)"
                      srcset="
                        {{ block.settings.image | img_url: '1200x' }} 1x,
                        {{ block.settings.image | img_url: '2400x' }} 2x
                      "
                    >

                    <!-- 默认图片 -->
                    <img
                      src="{{ block.settings.image | img_url: '1200x' }}"
                      alt="{{ block.settings.title | escape }}"
                      class="grid-image"
                      loading="lazy"
                      width="{{ block.settings.image.width }}"
                      height="{{ block.settings.image.height }}"
                    >
                  </picture>
                  <div class="img-text">
                    {{ block.settings.image_text }}
                  </div>
                  <div class="bottom-gradient" id="bottomGradient">
    
                      {% if block.settings.button_label != blank %}
                        <a
                          {% if block.settings.button_link != blank %}
                            href="{{ block.settings.button_link }}"
                          {% else %}
                            role="link" aria-disabled="true"
                          {% endif %}
                          class="btn {{ block.settings.button_style }}"
                          {{ block.shopify_attributes }}
                        >
                          {{- block.settings.button_label -}}
                          {% render 'icon-add' %}
                        </a>
                      {% endif %}
                  </div>
                </div>
              </div>
            {% else %}
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</div>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    const videoModal = document.querySelector('.video-modal');
    const videoPlayer = document.querySelector('.video-player');
    const closeBtn = document.querySelector('.close-button');
    const listBox = document.getElementById('imageListAccordion');
    if (listBox) {
      const items = listBox.querySelectorAll('.image-list-item');
      items.forEach((item, idx) => {
        item.addEventListener('mouseenter', function () {
          if (window.innerWidth > 767.98) {
            items.forEach(i => i.classList.remove('active'));
            item.classList.add('active');
          }
        });
        item.addEventListener('mouseleave', function () {
          if (window.innerWidth > 767.98) {
            items.forEach(i => i.classList.remove('active'));
            items[0].classList.add('active');
          }
        });
      });
    }
    // Slick-移动端
    function initSlickOnMobile() {
      const $slickBox = $('.image-list-slick');
      if (window.innerWidth <= 767.98) {
        if (!$slickBox.hasClass('slick-initialized')) {
          $slickBox.slick({
            slidesToShow: 1.2,
            slidesToScroll: 1,
            infinite: false,
            arrows: false,
            dots: false,
            centerMode: false,
            variableWidth: false,
            adaptiveHeight: true
          });
        }
        // 关闭手风琴展开动画
        $slickBox.find('.image-list-item').removeClass('active');
      } else {
        if ($slickBox.hasClass('slick-initialized')) {
          $slickBox.slick('unslick');
          // 恢复第一个为 active
          $slickBox.find('.image-list-item').removeClass('active').first().addClass('active');
        }
      }
    }
    initSlickOnMobile();
    window.addEventListener('resize', initSlickOnMobile);

    if (typeof gsap !== 'undefined' && typeof ScrollTrigger !== 'undefined') {
      gsap.registerPlugin(ScrollTrigger);
      const img = document.querySelector('#animated-image-container');
      const btn = document.querySelector('#bottomGradient');
      const text =  document.querySelector('.img-text');
      const header = document.querySelector('.header');
      const headerHeight = header.offsetHeight;
      const originWidth = img.offsetWidth;
      const originHeight = img.offsetHeight;

      gsap.to(img, {
        scrollTrigger: {
          trigger: img,
          start: `top 80%`,
          end: `top ${headerHeight}px`,
          scrub: true,
          onUpdate: (self) => {
            const curWidth = originWidth + (window.innerWidth - originWidth) * self.progress;
            img.style.width = `${curWidth}px`;
            if (self.progress >= 0.99) {
              img.style.height = `${window.innerHeight - headerHeight}px`;
            } else {
              img.style.height = `auto`;
            }
          },
        },
      });
      let tl = gsap.timeline({
        scrollTrigger: {
          trigger: img,
          start: `top ${headerHeight + 40}px`,
          end: `top ${headerHeight}px`,
          scrub: true,
          // markers: true
        }
      });
      tl.fromTo(text, 
          {
          opacity: 0,
          y:100,
          scale: 0.98,
        },
        {
          scale: 1,
          y:0,
          keyframes: [
            { opacity: 0.5, duration: 1, ease: 'power2.out' },
            { opacity: 1, duration: 1.2, ease: 'power3.out' },
          ],
          ease: 'expo.out',
          duration: 2.2,
        }
      );
      tl.fromTo(btn, 
        {
          opacity: 0,
          scale: 0.6,
        },
        {
          opacity: 1,
          scale: 1,
          ease: 'power2.out',
          duration:1,
        }
      );
      {% comment %} 
      gsap.to(btn, {
        opacity: 1,
        scale: 1,
        scrollTrigger: {
          trigger: text,
          start: `top ${headerHeight + 40}px`,
          end: `top ${headerHeight}px`,
          scrub: true,
          onUpdate: (self) => {
            gsap.set(btn, {
              opacity: self.progress,
              scale: 0.6 + 0.4 * self.progress,
              delay: 3,
            });
          },
        },
      }); {% endcomment %}
    }
  
  });
</script>
