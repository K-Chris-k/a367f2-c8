 <script>
    class ResponsiveTabsacc {
        constructor() {
            this.isMobile = window.innerWidth <= 768;
            console.log('ResponsiveTabs initialized, isMobile:', this.isMobile);
           // this.init();
            this.bindEvents();
            window.addEventListener('resize', () => this.handleResize());
        }

        init() {
            this.updateLayout();
        }

        bindEvents() {
            // 绑定所有手风琴按钮的点击事件
            document.querySelectorAll('.section-{{ section.id }} .accordion-trigger').forEach(trigger => {
                trigger.addEventListener('click', (e) => {
                    console.log('Accordion trigger clicked, target:', e.target);
                    this.handleTabClick(e);
                });
            });
        }

        handleTabClick(event) {
            event.preventDefault();
            event.stopPropagation();
            
            const trigger = event.currentTarget; // 获取触发事件的按钮
            const targetId = trigger.dataset.target;
            console.log('Target ID:', targetId);
            
            this.switchTab(targetId, trigger);
        }

        switchTab(targetId, trigger = null) {
            console.log('Switching to tab:', targetId);
            
            if (!trigger) {
                trigger = document.querySelector(`.section-{{ section.id }} .accordion-trigger[data-target="${targetId}"]`);
            }
            
            if (!trigger) {
                console.error('Trigger not found for target:', targetId);
                return;
            }

            if (this.isMobile) {
                // 移动端：手风琴展开/收起逻辑
                console.log('Mobile mode - toggling accordion');
                const isActive = trigger.classList.contains('active');
                const contentPanel = document.getElementById(`content-${targetId}`);
                
                if (isActive) {
                    // 收起当前
                    trigger.classList.remove('active');
                    if (contentPanel) contentPanel.classList.remove('active');
                } else {
                    // 收起所有其他面板
                    document.querySelectorAll('.section-{{ section.id }} .accordion-trigger').forEach(t => {
                        if (t !== trigger) {
                            t.classList.remove('active');
                        }
                    });
                    document.querySelectorAll('.section-{{ section.id }} .accordion-panel').forEach(p => {
                        if (p !== contentPanel) {
                            p.classList.remove('active');
                        }
                    });
                    
                    // 展开当前
                    trigger.classList.add('active');
                    if (contentPanel) contentPanel.classList.add('active');
                }
            } else {

               const isActive = trigger.classList.contains('active');
                const contentPanel = document.getElementById(`content-${targetId}`);
              if (isActive) {
                    // 收起当前
                    trigger.classList.remove('active');
                    if (contentPanel) contentPanel.classList.remove('active');
                } else {

                // PC端：切换激活状态
                console.log('PC mode - switching tab');
                
                // 1. 移除所有激活状态
                document.querySelectorAll('.section-{{ section.id }} .accordion-trigger').forEach(t => {
                    t.classList.remove('active');
                });
                document.querySelectorAll('.section-{{ section.id }} .accordion-mode .accordion-panel').forEach(p => {
                    p.classList.remove('active');
                });
                document.querySelectorAll('.section-{{ section.id }} .tab-image-container .image-panel').forEach(p => {
                    p.classList.remove('active');
                });
                
                // 2. 设置当前激活状态
                trigger.classList.add('active');
                
                // 3. 显示对应的文字内容
                const contentPanel = document.getElementById(`content-${targetId}`);
                if (contentPanel) {
                    contentPanel.classList.add('active');
                    console.log('Content panel activated:', contentPanel.id);
                }
                
                // 4. 显示对应的图片
                const imagePanel = document.getElementById(`image-${targetId}`);
                if (imagePanel) {
                    imagePanel.classList.add('active');
                    console.log('Image panel activated:', imagePanel.id);
                }
               }
            }
        }

        updateLayout() {
            console.log('Updating layout for', this.isMobile ? 'mobile' : 'PC');
            
            if (this.isMobile) {
                // 移动端：收起所有，只展开第一个
                document.querySelectorAll('.section-{{ section.id }} .accordion-trigger').forEach(t => {
                    t.classList.remove('active');
                });
                document.querySelectorAll('.section-{{ section.id }} .accordion-panel').forEach(p => {
                    p.classList.remove('active');
                });
                
                // 展开第一个
                const firstTrigger = document.querySelector('.section-{{ section.id }} .accordion-trigger');
                const firstContent = document.querySelector('.section-{{ section.id }} .accordion-panel');
                if (firstTrigger && firstContent) {
                    firstTrigger.classList.add('active');
                    firstContent.classList.add('active');
                    console.log('Mobile: First item expanded');
                }
                
                // 隐藏PC端图片容器
                const imageContainer = document.querySelector('.section-{{ section.id }} .tab-image-container');
                if (imageContainer) {
                    imageContainer.style.display = 'none';
                }
            } else {
                // PC端：收起所有文字内容，只展开第一个
                document.querySelectorAll('.section-{{ section.id }} .accordion-trigger').forEach(t => {
                    t.classList.remove('active');
                });
                document.querySelectorAll('.section-{{ section.id }} .accordion-mode .accordion-panel').forEach(p => {
                    p.classList.remove('active');
                });
                document.querySelectorAll('.section-{{ section.id }} .tab-image-container .image-panel').forEach(p => {
                    p.classList.remove('active');
                });
                
                // 激活第一个
                const firstTrigger = document.querySelector('.section-{{ section.id }} .accordion-trigger');
                const firstContent = document.querySelector('.section-{{ section.id }} .accordion-mode .accordion-panel');
                const firstImage = document.querySelector('.section-{{ section.id }} .tab-image-container .image-panel');
                 console.log(firstTrigger);
                 console.log(firstContent);
                 console.log(firstImage);
                if (firstTrigger && firstContent && firstImage) {
                    firstTrigger.classList.add('active');
                    firstContent.classList.add('active');
                    firstImage.classList.add('active');
                    console.log('PC: First item activated');
                }
                
                // 显示PC端图片容器
                const imageContainer = document.querySelector('.section-{{ section.id }} .tab-image-container');
                if (imageContainer) {
                    imageContainer.style.display = 'block';
                }
            }
        }

        handleResize() {
            const wasMobile = this.isMobile;
            this.isMobile = window.innerWidth <= 768;
            
            if (wasMobile !== this.isMobile) {
                console.log('Screen size changed to', this.isMobile ? 'mobile' : 'PC');
               // this.updateLayout();
            }
        }
    }

    // 初始化 - 确保DOM完全加载后执行
    document.addEventListener('DOMContentLoaded', () => {
        console.log('DOM loaded, initializing ResponsiveTabs...');
        new ResponsiveTabsacc();
        
        // 添加调试信息
        console.log('Total accordion triggers:', document.querySelectorAll('.accordion-trigger').length);
        console.log('Total content panels:', document.querySelectorAll('.accordion-mode .accordion-panel').length);
        console.log('Total image panels:', document.querySelectorAll('.tab-image-container .image-panel').length);
    });
</script>
