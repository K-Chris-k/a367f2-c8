<style>
.section-meter-parameter-table .product-collection h2{margin-top:120px;padding-bottom:40px;font-size:48px;line-height:58px; text-align:center}
.section-meter-parameter-table .parameter-table-box h4 {line-height:43px; text-align: center;background: #5E7FFF;font-size:22px;color: #fff;}
.section-meter-parameter-table .parameter-table-box {border: 1px solid #A4A4A4;}
.section-meter-parameter-table .parameter-table-box li{display: flex;align-items: center;justify-content: space-between;border-top: 1px solid #A4A4A4;}
.section-meter-parameter-table .parameter-table-box li:nth-child(2n){background:#F1F1F1}
.section-meter-parameter-table .parameter-table-box li .title{display: inline-flex;width: 40%; height: 52px;line-height: 52px;justify-content: center;}
.section-meter-parameter-table .parameter-table-box li .content{width:60%;text-align:center;border-left: 1px solid #A4A4A4;}
  @media (max-width: 768px) {
  .section-meter-parameter-table .product-collection h2{margin-top:60px;padding-bottom:10px;font-size:28px;line-height:34px; }
  .section-meter-parameter-table .parameter-table-box li .title{width:50%;line-height: 22px;align-items: center;text-align: center;}
  .section-meter-parameter-table .parameter-table-box li .content{width:50%}
}
</style>
{% liquid
    assign motion_delay = 50
%}
<div class="section  section--padding page-width section-meter-parameter-table">
  <div class="product-collection product-slider-container">
    {% if section.settings.title !=blank %}
    <h2>
       <motion-element class="block" data-motion="fade-up" data-motion-delay="{{ motion_delay }}"><span>{{ section.settings.title }}</span></motion-element>
    </h2>
    {% endif %}
    <div class="parameter-table-box">
      <h4>{{  section.settings.column_title }}</h4>
      <div class="item-box">
        <ul>
        {% for block in section.blocks %}
          <li class="item">
              <div class="title">{{ block.settings.title }}</div>
              <div class="content">{{ block.settings.content }}</div>
          </li>
        {% endfor %}
        </ul>
      </div>
    </div>

  </div>
</div>

{% schema %}
{
  "name": "meter-table",
  "tag": "section",
  "class": "section section-meter-table",
  "max_blocks": 10,
  "disabled_on": {
    "groups": ["footer", "header", "custom.overlay"]
  },
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "标题",
      "default": "P1 Meter lezer Kenmerken"
    },
    {
      "type": "text",
      "id": "column_title",
      "label": "列标题",
      "default": "Communicatieparameters"
    }
  ],
  "blocks": [
    {
      "type": "card",
      "name": "brand item",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "标题"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "描述"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "meter特色表格",
      "blocks": [
        {
          "type": "card"
        },
        {
          "type": "card"
        },
        {
          "type": "card"
        },
        {
          "type": "card"
        }
      ]
    }
  ]
}
{% endschema %}
