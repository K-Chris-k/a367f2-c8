<div class="image-with-text-email-overlay section--padding">
  <div class="{% if section.settings.container == 'full' %}w-full{% else %}page-width{% endif %}">
    <div class="relative overflow-hidden{% unless section.settings.container == 'full' %} blocks-radius{% endunless %}">
      <parallax-element
        class="block w-full h-full overflow-hidden"
        {% if section.settings.enable_parallax %}
          data-parallax="0.3" data-parallax-direction="{{ section.settings.parallax_direction }}"
        {% endif %}
      >
        {% comment %} <motion-element
          {% comment %} data-motion="zoom-out" {% endcomment %}
          class="block relative overflow-hidden w-full h-full media mb:media--{{ mobile_height }}{% if desktop_height == 'adapt' %} media--adapt{% else %} media--{{ desktop_height }}{% endif %}"
        > {% endcomment %}
          <div class="block relative overflow-hidden w-full h-full media mb:media--{{ mobile_height }}{% if desktop_height == 'adapt' %} media--adapt{% else %} media--{{ desktop_height }}{% endif %}">
          {%- if section.settings.image != blank -%}
            {%- capture sizes -%}{% if section.settings.container == 'full' %}100vw{% else %}min({{ settings.page_width }}px, 100vw){% endif %}{%- endcapture -%}
            <picture class="media-wrapper media--height block w-full h-full relative overflow-hidden">
              {%- if section.settings.image_mobile -%}
                <source
                  media="(max-width: 767px)"
                  srcset="{{ section.settings.image_mobile | image_url: width: '400x' }} 400w, {{ section.settings.image_mobile | image_url: width: '600x' }} 600w, {{ section.settings.image_mobile | image_url: width: '800x' }} 800w, {{ section.settings.image_mobile | image_url: width: '1000x' }} 1000w"
                  width="{{ section.settings.image_mobile.width }}"
                  height="{{ section.settings.image_mobile.height }}"
                >
              {%- endif -%}

              {{-
                section.settings.image
                | image_url: width: section.settings.image.width
                | image_tag:
                  loading: 'lazy',
                  sizes: sizes,
                  widths: '300,400,500,600,700,800,900,1000,1200,1400,1600,1800,2000,2200,2400,2600,2800,3000,3200',
                  is: 'image-lazy'
              -}}
            </picture>
          {%- else -%}
            <div class="media-wrapper">
              {{- 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' -}}
            </div>
          {%- endif -%}
          </div>
        {% comment %} </motion-element> {% endcomment %}
      </parallax-element>
      <div class="section section--padding image-with-text-ovelay__content">
        <div class="image-with-text-ovelay__content-wrapper content-overlay content-overlay--{{ section.settings.content_position }} color-{{ section.settings.color_scheme }}
          {% if section.settings.container == 'full' %} page-width{% endif %} {%if section.settings.enable_background  %} custom-box-background{% endif %}"
        >
          <div class="relative z-1 rich-text text-{{ section.settings.content_alignment }} {%if section.settings.enable_background  %} with-background {% endif %}">
            {%- assign motion_delay = 50 -%}
            {% for block in section.blocks %}
              {% case block.type %}
                {% when 'logo_img_text'%}
                  {% if block.settings.logo_img != blank %}
                  <motion-element class="image-text-box block" data-motion="fade-up">
                  {% if block.settings.logo_title != blank %}
                     <div class="logo_title">{{  block.settings.logo_title }}</div>
                  {% endif %}
                  </motion-element>
                {% else %}
                  {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                {% endif %}
                {% when 'email_area'%}
                   {{ block.settings.email_id }} 
                   {% comment %} {% if block.settings.email_id %}
                        {% assign shell_id = 'mc_embed_shell_' | append: section.id %}
                        {% assign signup_id = 'mc_embed_signup_' | append: section.id %}
                        {% assign form_html = block.settings.email_id
                          | replace: '[shell_id]', shell_id
                          | replace: '[signup_id]', signup_id %}
                        {{ form_html }}
                      {% else %}
                        <p>请在区块设置中粘贴您的邮箱订阅表单代码（ID用[shell_id]和[signup_id]占位）。</p>
                    {% endif %} {% endcomment %}
                     
                {% when 'subheading' %}
                  <motion-element
                    data-motion="fade-up"
                    data-motion-delay="{{ motion_delay }}"
                    class="block rich-text__subheading text-subheading"
                    {{ block.shopify_attributes }}
                  >
                    {{ block.settings.subheading }}
                  </motion-element>
                  {%- assign motion_delay = motion_delay | plus: 50 -%}
                {% when 'heading' %}
                  <h2 class="rich-text__heading {{ block.settings.heading_size }}" {{ block.shopify_attributes }}>
                    <motion-element data-motion="fade-up" data-motion-delay="{{ motion_delay }}" class="block">
                      {% render 'highlight-text',
                        text: block.settings.heading,
                        style: block.settings.heading_highlight_style
                      %}
                    </motion-element>
                  </h2>
                  {%- assign motion_delay = motion_delay | plus: 50 -%}
                {% when 'text' %}
                  <motion-element
                    data-motion="fade-up"
                    data-motion-delay="{{ motion_delay }}"
                    class="block rich-text__text rte {{ block.settings.text_size }}"
                    {{ block.shopify_attributes }}
                  >
                    {{- block.settings.text -}}
                  </motion-element>
                  {%- assign motion_delay = motion_delay | plus: 50 -%}
                {% when 'button' %}
                  <motion-element class="block" data-motion="fade-up" data-motion-delay="{{ motion_delay }}">
                    {% if block.settings.button_label != blank %}
                      <a
                        {% if block.settings.button_link != blank %}
                          href="{{ block.settings.button_link }}"
                        {% else %}
                          role="link" aria-disabled="true"
                        {% endif %}
                        class="btn {{ block.settings.button_style }} links"
                        {{ block.shopify_attributes }}
                      >
                        {{- block.settings.button_label -}}
                      </a>
                    {% endif %}
                  </motion-element>
              {% endcase %}
            {% endfor %}
          </div>
        </div>
      </div>
      <div
        class="bg-overlay absolute inset-0"
        style="--color-overlay-alpha: {{ section.settings.overlay_opacity }};"
      ></div>
    </div>
  </div>
</div>
