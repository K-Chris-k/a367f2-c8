<script>
  document.addEventListener("DOMContentLoaded", function() {
    var tabNavWrap = document.querySelector('.section-{{ section.id }} .tabs__nav-wrap');
    var tabs = document.querySelectorAll('.section-{{ section.id }} .tabs__tab');

    tabs.forEach(function(tab) {
      tab.addEventListener('click', function(e) {
        tab.scrollIntoView({ behavior: 'smooth', inline: 'center', block: 'nearest' });
      });
    });

    // Scroll to the selected tab when aria-selected is changed
    const observer = new MutationObserver(() => {
      tabs.forEach(tab => {
        if (tab.getAttribute('aria-selected') === 'true') {
          tab.scrollIntoView({ behavior: 'smooth', inline: 'center', block: 'nearest' });
        }
      });
    });
    tabs.forEach(tab => observer.observe(tab, { attributes: true }));
  });
</script>


<script>
  document.addEventListener('DOMContentLoaded', function() {
    // 标签页切换功能
    const tabButtons = document.querySelectorAll('.tab-btn');
    const tabPanes = document.querySelectorAll('.tab-pane');
    
    tabButtons.forEach(button => {
      button.addEventListener('click', () => {
        // 移除所有按钮的active类
        tabButtons.forEach(btn => btn.classList.remove('active'));
        // 隐藏所有标签页内容
        tabPanes.forEach(pane => pane.classList.remove('active'));
        
        // 激活当前按钮
        button.classList.add('active');
        // 显示对应的标签页内容
        const tabId = button.getAttribute('data-tab');
        document.getElementById(tabId).classList.add('active');
        
        // 重置所有滑块指示器
        document.querySelectorAll('.slider-indicator').forEach(indicator => {
          indicator.querySelectorAll('.indicator-dot').forEach((dot, index) => {
            dot.classList.toggle('active', index === 0);
          });
        });
        
        // 重置所有滑块到第一个卡片
        document.querySelectorAll('.cards-grid').forEach(grid => {
          if (window.innerWidth <= 768) {
            grid.scrollLeft = 0;
          }
        });
      });
    });
    
    // 移动端滑块滚动指示器更新
    const cardsGrids = document.querySelectorAll('.cards-grid');
    
    cardsGrids.forEach(grid => {
      grid.addEventListener('scroll', function() {
        if (window.innerWidth <= 768) {
          const scrollLeft = this.scrollLeft;
          const cardWidth = this.querySelector('.card').offsetWidth + 15; // 包含gap
          const activeIndex = Math.round(scrollLeft / cardWidth);
          
          // 更新当前标签页的指示器
          const activePane = this.closest('.tab-pane');
          if (activePane && activePane.classList.contains('active')) {
            const dots = activePane.querySelectorAll('.indicator-dot');
            dots.forEach((dot, index) => {
              dot.classList.toggle('active', index === activeIndex);
            });
          }
        }
      });
    });
    
    // 窗口大小调整时重新计算
    window.addEventListener('resize', function() {
      // 如果是移动端切回桌面端，重置指示器
      if (window.innerWidth > 768) {
        document.querySelectorAll('.slider-indicator').forEach(indicator => {
          indicator.querySelectorAll('.indicator-dot').forEach((dot, index) => {
            dot.classList.toggle('active', index === 0);
          });
        });
      }
    });
  });
</script>
