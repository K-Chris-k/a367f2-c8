<style>
  /* 组件基础样式 */
  .tabs-slider-component {
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
    font-family: sans-serif;
  }

  /* 标签页导航 */
  .tabs-nav {
    display: flex;
    justify-content: center;
    gap: 15px;
    margin-bottom: 30px;
    flex-wrap: wrap;
    border-bottom: 1px solid #e0e0e0;
    padding-bottom: 15px;
  }

  .tab-btn {
    padding: 12px 24px;
    background: #f5f5f5;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 16px;
    transition: all 0.3s ease;
    min-width: 120px;
  }

  .tab-btn:hover {
    background: #e9e9e9;
  }

  .tab-btn.active {
    background: #333;
    color: white;
  }

  /* 标签页内容区 */
  .tabs-content {
    position: relative;
    min-height: 300px;
  }

  .tab-pane {
    display: none;
    animation: fadeIn 0.5s ease;
  }

  .tab-pane.active {
    display: block;
  }

  /* 桌面端：网格布局 */
  .cards-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
  }

  .card {
    background: white;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    border: 1px solid #eee;
  }

  .card h3 {
    margin-top: 0;
    color: #333;
  }

  /* 移动端：滑块布局 */
  @media (max-width: 768px) {
    .cards-grid {
      display: flex;
      overflow-x: auto;
      scroll-snap-type: x mandatory;
      gap: 15px;
      padding-bottom: 10px;
      -webkit-overflow-scrolling: touch; /* 移动端平滑滚动 */
      scrollbar-width: none; /* Firefox隐藏滚动条 */
    }
    
    .cards-grid::-webkit-scrollbar {
      display: none; /* Chrome/Safari隐藏滚动条 */
    }
    
    .card {
      flex: 0 0 calc(85vw - 30px); /* 移动端卡片宽度 */
      scroll-snap-align: start;
      min-height: 200px;
    }
    
    .tabs-nav {
      justify-content: flex-start;
      overflow-x: auto;
      padding-bottom: 10px;
    }
    
    .tab-btn {
      min-width: 100px;
      padding: 10px 15px;
      font-size: 14px;
      white-space: nowrap;
    }
  }

  /* 小屏手机优化 */
  @media (max-width: 480px) {
    .card {
      flex: 0 0 calc(90vw - 30px);
    }
  }

  /* 动画效果 */
  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  /* 滑块指示器 */
  .slider-indicator {
    display: none;
    justify-content: center;
    gap: 8px;
    margin-top: 15px;
  }

  @media (max-width: 768px) {
    .slider-indicator {
      display: flex;
    }
    
