    overflow: hidden;
  }
  .grid-container {
    display: grid;
    width: 100%;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: 1fr;
    gap: 1rem;
  }
  .grid-item {
    position: relative;
    border-radius:20px;
    height: 298px;
    overflow: hidden;
  }
