  .section-{{ section.id }} .text-base{line-height:24px;font-size: 20px;font-weight:400;color:#1C1C1C;}
  @media (max-width: 767.98px) {
    .section-{{ section.id }} .text-subheading{line-height:19px;font-size: 16px;font-weight:600;color:#000000;text-align:left}
    .section-{{ section.id }} .text-base{line-height:17px;font-size: 14px;font-weight:400;color:#000000;text-align:left}
