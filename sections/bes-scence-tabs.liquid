    .section-{{ section.id }} .h2-title {line-height:34px;font-size: 28px;}
    .section-{{ section.id }} .content{line-height:19px;font-size: 16px;}
    {% comment %} .section-{{ section.id }} .collage-tab__image{height:176px} {% endcomment %}
    .section-{{ section.id }} .collage-tab__image .grid-image{object-fit: cover;}
    .section-{{ section.id }} .collage-tab__description {margin-top:1.5rem;padding: 0.5rem 0rem 0rem;}
