<div class="select-tabs">
  <div class="select-items-box">
    <div class="select-item active" data-index="0">Kombinationsset</div>
    <div class="select-item" data-index="1">Empfehlung</div>
  </div>
  <div class="tab-panel">
    <div class="tab-content" data-index="0"></div>
    <div class="tab-content" data-index="1" style="display:none;"></div>
  </div>
</div>

<script>
  $(function () {
    $('.select-item').on('click', function () {
      var idx = $(this).data('index');
      $('.select-item').removeClass('active');
      $(this).addClass('active');
      $('.tab-content').hide();
      $('.tab-content[data-index="' + idx + '"]').show();
    });
    // 选中 group-1 并插入到 gpo-app 的最前面
    function moveGroup1() {
      var $group1 = $('.gpo-group[data-element-id="group-1"]');
      var $gpoApp = $('.gpo-app');
      // 确保都存在
      if ($group1.length && $gpoApp.length) {
        $gpoApp.prepend($group1);
        // 移动一次后可停止
        return true;
      }
      return false;
    }

    // 尝试移动，最多检测 50 次，每次间隔 200ms
    let tryCount = 0;
    let maxTries = 50;
    let interval = setInterval(function () {
      tryCount++;
      if (moveGroup1() || tryCount >= maxTries) {
        clearInterval(interval);
      }
    }, 200);
  });
</script>

