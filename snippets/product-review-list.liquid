<style>
  .reviews-list-box {margin:40px 0px;}
  .reviews-list-box h2{display:flex;justify-content: space-between;align-items: center; font-size:16px;line-height:20px}
  .reviews-list-box h2 .title .icon{display: inline-flex;width:100px;}
  .reviews-list-box h2 .more{display: inline-flex;align-items: center;line-height:17px;font-size:14px;font-weight:400;color:#666}
  .reviews-list-box h2 .more .icon{transform: rotate(180deg);}
  .reviews-list-box .reviews-wrapper{position:relative}
  .reviews-list-box .reviews-list{display:flex;margin-top:18px;gap:16px }
  .reviews-list-box .reviews-list .box{min-height:175px;padding:20px;border-radius: 12px;background: #F5F5F5;}
  .reviews-list-box .box .starts .icon{width: 85px;height:16px;}
  .reviews-list-box .box .review-title{margin-top:10px;line-height:20px;font-size: 14px;font-weight: 700;}
  .reviews-list-box .box .review-content{margin-top:2px;line-height:17px;font-size: 14px;font-weight: 400;}
  .reviews-list-box .box .review-other{margin-top:2px;line-height:20px;font-size: 12px;color: #666;}
  .reviews-list-box .carousel-arrows button {width: 36px;height:36px}
  .reviews-list-box .carousel-arrows button.prev-arrow{left:20px}
  .reviews-list-box .carousel-arrows button.next-arrow{right:20px}
  .reviews-list-box .carousel-arrows button.slick-disabled{ visibility: hidden;}
  .reviews-list-box .slick-track{gap:0px}
  .reviews-list-box .slick-initialized .slick-slide{margin-right:16px}
  @media (max-width: 1024px) {  
      .reviews-list-box {margin:20px 0px;}
      .reviews-list-box .reviews-list .box{ padding: 12px;border-radius: 6px;}
  }
</style>
   <div class="reviews-list-box">
      <h2><span class="title">  {%- render 'icon-green-stars'，size:'large' -%}</span>
      <a href="{{ more_url}}" alt="" target="_blank"><span class="more">{{more}} {% render 'icon-slider-prev', size:'small' %}</span></a></h2>
      <div class="reviews-wrapper">
      <div class="reviews-list">
        {% for block in reviewsList %}
             <div class="box">
              <div class="starts">{%- render 'icon-green-stars-list', size: 'large' -%}</div>
              <h4 class="ellipsis-1 review-title" title="{{block.review_title}}">{{block.review_title}}</h4>
              <div class="ellipsis-3 review-content" title="{{block.review_content}}">{{block.review_content}}</div>
              <div class="review-other"><span class="review-author">{{block.review_author}},</span><span class="review-date">{{block.review_date}}</span></div>
          </div>
        {% endfor %}
      </div>
        <div class="carousel-arrows">
          <button class="prev-arrow">❮</button>
          <button class="next-arrow">❯</button>
        </div>
      </div>
  </div>

<script>
  $(document).ready(function () {
    $('.reviews-list-box .reviews-list').slick({
      autoplay: false,
      slidesToShow: 2.5,
      slidesToScroll: 1,
      infinite: false, 
      dots: false,
      arrows: true,
      prevArrow: $('.reviews-list-box .carousel-arrows .prev-arrow'),
      nextArrow: $('.reviews-list-box .carousel-arrows .next-arrow'),
      responsive: [
          {
          breakpoint: 1024,
          settings: {
            autoplay: false,
            slidesToShow: 2.5,
          },
        },
        {
          breakpoint: 768,
          settings: {
            autoplay: false,
            slidesToShow: 2.2,
          },
        }
      ]
    });

  });
  
</script>
